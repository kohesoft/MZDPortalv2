                        }, "Value", "Text"), "Ülke Seçin", new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" })
                    @Html.ValidationMessageFor(model => model.Ulke, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="Postakodu" class="block text-gray-700 font-medium mb-1">Posta Kodu</label>
                    @Html.EditorFor(model => model.Postakodu, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Posta Kodu" } })
                    @Html.ValidationMessageFor(model => model.Postakodu, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="KanGrubu" class="block text-gray-700 font-medium mb-1">Kan Grubu</label>
                    @Html.DropDownListFor(model => model.KanGrubu, new SelectList(new List<SelectListItem>
                                {
                            new SelectListItem { Text = "A Rh+", Value = "A Rh+" },
                            new SelectListItem { Text = "A Rh-", Value = "A Rh-" },
                            new SelectListItem { Text = "B Rh+", Value = "B Rh+" },
                            new SelectListItem { Text = "B Rh-", Value = "B Rh-" },
                            new SelectListItem { Text = "AB Rh+", Value = "AB Rh+" },
                            new SelectListItem { Text = "AB Rh-", Value = "AB Rh-" },
                            new SelectListItem { Text = "0 Rh+", Value = "0 Rh+" },
                            new SelectListItem { Text = "0 Rh-", Value = "0 Rh-" }
                        }, "Value", "Text"), "Kan Grubu Seçin", new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" })
                    @Html.ValidationMessageFor(model => model.KanGrubu, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="DogumTarihi" class="block text-gray-700 font-medium mb-1">Doğum Tarihi</label>
                    @Html.TextBoxFor(model => model.DogumTarihi, "{0:yyyy-MM-dd}", new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Doğum Tarihi", type = "date" })
                    @Html.ValidationMessageFor(model => model.DogumTarihi, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="Cinsiyet" class="block text-gray-700 font-medium mb-1">Cinsiyet</label>
                    @Html.DropDownListFor(model => model.Cinsiyet, new SelectList(new List<SelectListItem>
                                {
                            new SelectListItem { Text = "Erkek", Value = "Erkek" },
                            new SelectListItem { Text = "Kadın", Value = "Kadın" },
                            new SelectListItem { Text = "Diğer", Value = "Diğer" }
                        }, "Value", "Text"), "Cinsiyet Seçin", new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" })
                    @Html.ValidationMessageFor(model => model.Cinsiyet, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="MedeniDurum" class="block text-gray-700 font-medium mb-1">Medeni Durum</label>
                    @Html.DropDownListFor(model => model.MedeniDurum, new SelectList(new List<SelectListItem>
                                {
                            new SelectListItem { Text = "Evli", Value = "Evli" },
                            new SelectListItem { Text = "Bekar", Value = "Bekar" }
                        }, "Value", "Text"), "Medeni Durum Seçin", new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" })
                    @Html.ValidationMessageFor(model => model.MedeniDurum, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div class="col-span-1 md:col-span-2 flex justify-center mt-4">
                    <input type="submit" value="Kaydet" class="w-full md:w-1/3 py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded transition duration-200" />
                </div>
            </form>
        </div>
    </div>
</body>
