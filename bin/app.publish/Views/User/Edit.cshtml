@model MZDNETWORK.Models.UserInfo

@{
    ViewBag.Title = "Kullanıcı Bilgilerini Düzenle";
}
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
</head>

<body class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-4xl mx-auto">
        <div class="bg-white shadow-xl rounded-lg p-10">
            <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Kullanıcı Bilgilerini Düzenle</h2>
            <form action="@Url.Action("Edit", "User")" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="col-span-1 md:col-span-2 text-red-600 text-sm mb-4">
                        @Html.ValidationSummary(true, "", new { @class = "text-red-600" })
                    </div>
                }
                @Html.HiddenFor(model => model.UserId)

                <div>
                    <label for="Email" class="block text-gray-700 font-medium mb-1">E-posta</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "E-posta" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="RealPhoneNumber" class="block text-gray-700 font-medium mb-1">Telefon Numarası</label>
                    @Html.EditorFor(model => model.RealPhoneNumber, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Telefon Numarası" } })
                    @Html.ValidationMessageFor(model => model.RealPhoneNumber, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="Adres" class="block text-gray-700 font-medium mb-1">Adres</label>
                    @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Adres" } })
                    @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="Adres2" class="block text-gray-700 font-medium mb-1">Adres 2</label>
                    @Html.EditorFor(model => model.Adres2, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Adres 2" } })
                    @Html.ValidationMessageFor(model => model.Adres2, "", new { @class = "text-red-600 text-xs" })
                </div>

                <div>
                    <label for="Sehir" class="block text-gray-700 font-medium mb-1">Şehir</label>
                    @Html.DropDownListFor(model => model.Sehir, new SelectList(new List<SelectListItem>
                                {
                        new SelectListItem { Text = "İstanbul", Value = "İstanbul" },
