                    @Html.DropDownListFor(model => model.Ulke, new SelectList(new List<SelectListItem>
                                {
                            new SelectListItem { Text = "Türkiye", Value = "Türkiye" },
                            new SelectListItem { Text = "Almanya", Value = "Almanya" },
                            new SelectListItem { Text = "Fransa", Value = "Fransa" },
                            new SelectListItem { Text = "İngiltere", Value = "İngiltere" },
                            new SelectListItem { Text = "ABD", Value = "ABD" },
                            new SelectListItem { Text = "Kanada", Value = "Kanada" },
                            new SelectListItem { Text = "Avustralya", Value = "Avustralya" },
                            new SelectListItem { Text = "İtalya", Value = "İtalya" },
                            new SelectListItem { Text = "İspanya", Value = "İspanya" },
                            new SelectListItem { Text = "Hindistan", Value = "Hindistan" },
                            new SelectListItem { Text = "Çin", Value = "Çin" },
                            new SelectListItem { Text = "Japonya", Value = "Japonya" },
                            new SelectListItem { Text = "Brezilya", Value = "Brezilya" },
