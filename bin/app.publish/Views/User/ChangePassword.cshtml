@model MZDNETWORK.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Şifre Değiştir";
}
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tailwind CSS CDN (geliştirme/test için) -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md mx-auto bg-white rounded-xl shadow-md p-8">
        <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Şifre Değiştir</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-4">
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                </div>
            </div>
            <script type="text/javascript">
                setTimeout(function () {
                    window.location.href = '@TempData["RedirectUrl"]';
                }, 2000);
            </script>
        }
        <form class="space-y-5" action="@Url.Action("ChangePassword", "User")" method="post">
            @Html.AntiForgeryToken()
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-4">
                    @Html.ValidationSummary(true, "", new { @class = "text-red-600 text-sm" })
                </div>
            }
            <div>
                <label for="OldPassword" class="block text-gray-700 font-medium mb-1 flex items-center gap-2">
                    <svg x="0px" y="0px" width="16" height="16" class="inline-block"><path fill="#B1B7C4" d="M8.9,7.2C9,6.9,9,6.7,9,6.5v-4C9,1.1,7.9,0,6.5,0h-1C4.1,0,3,1.1,3,2.5v4c0,0.2,0,0.4,0.1,0.7 C1.3,7.8,0,9.5,0,11.5V13h12v-1.5C12,9.5,10.7,7.8,8.9,7.2z M4,2.5C4,1.7,4.7,1,5.5,1h1C7.3,1,8,1.7,8,2.5v4c0,0.2,0,0.4-0.1,0.6 l0.1,0L7.9,7.3C7.6,7.8,7.1,8.2,6.5,8.2h-1c-0.6,0-1.1-0.4-1.4-0.9L4.1,7.1l0.1,0C4,6.9,4,6.7,4,6.5V2.5z M11,12H1v-0.5 c0-1.6,1-2.9,2.4-3.4c0.5,0.7,1.2,1.1,2.1,1.1h1c0.8,0,1.6-0.4,2.1-1.1C10,8.5,11,9.9,11,11.5V12z" /></svg>
                    Eski Şifre
                </label>
                @Html.PasswordFor(model => model.OldPassword, new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Eski Şifre" })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>
            <div>
                <label for="NewPassword" class="block text-gray-700 font-medium mb-1 flex items-center gap-2">
                    <svg x="0px" y="0px" width="16" height="16" class="inline-block"><g><path fill="#B1B7C4" d="M6,2L6,2c0-1.1-1-2-2.1-2H2.1C1,0,0,0.9,0,2.1v0.8C0,4.1,1,5,2.1,5h1.7C5,5,6,4.1,6,2.9V3h5v1h1V3h1v2h1V3h1 V2H6z M5.1,2.9c0,0.7-0.6,1.2-1.3,1.2H2.1c-0.7,0-1.3-0.6-1.3-1.2V2.1c0-0.7,0.6-1.2,1.3-1.2h1.7c0.7,0,1.3,0.6,1.3,1.2V2.9z" /></g></svg>
                    Yeni Şifre
                </label>
                @Html.PasswordFor(model => model.NewPassword, new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Yeni Şifre" })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>
            <div>
                <label for="ConfirmPassword" class="block text-gray-700 font-medium mb-1 flex items-center gap-2">
                    <svg x="0px" y="0px" width="16" height="16" class="inline-block"><g><path fill="#B1B7C4" d="M6,2L6,2c0-1.1-1-2-2.1-2H2.1C1,0,0,0.9,0,2.1v0.8C0,4.1,1,5,2.1,5h1.7C5,5,6,4.1,6,2.9V3h5v1h1V3h1v2h1V3h1 V2H6z M5.1,2.9c0,0.7-0.6,1.2-1.3,1.2H2.1c-0.7,0-1.3-0.6-1.3-1.2V2.1c0-0.7,0.6-1.2,1.3-1.2h1.7c0.7,0,1.3,0.6,1.3,1.2V2.9z" /></g></svg>
                    Yeni Şifre Tekrar
                </label>
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Yeni Şifre Tekrar" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>
            <div>
                <input class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition duration-200 cursor-pointer" type="submit" value="Şifreyi Değiştir" />
            </div>
        </form>
    </div>
</body>
