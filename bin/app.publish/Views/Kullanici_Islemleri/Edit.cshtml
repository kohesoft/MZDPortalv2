@model MZDNETWORK.Models.User

@{
    ViewBag.Title = "Kullanıcı Düzenle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Düzenle</title>
    <link href='~/Content/tailwind.min.css' rel='stylesheet' />
    <link href='~/Content/boxicons.min.css' rel='stylesheet' />
    <link href="~/Content/kullaniciislemleri.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="form-container">
            <form class='login-form' action="@Url.Action("Edit", "Kullanici_Islemleri")" method="post">
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }

                <div class="flex-row">
                    <label class="lf--label" for="Username">
                        <i class='bx bx-id-card'></i>
                    </label>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "lf--input", placeholder = "Kullanıcı Adı", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Username)
                </div>

                <div class="flex-row">
                    <label class="lf--label" for="Password">
                        <i class='bx bx-lock'></i>
                    </label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "lf--input", placeholder = "Şifre", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="flex-row">
                    <label class="lf--label" for="Role">
                        <i class='bx bx-user'></i>
                    </label>
                    @Html.DropDownListFor(model => model.Role, new SelectList(new List<SelectListItem>
                            {
                        new SelectListItem { Text = "Yönetici", Value = "Yonetici" },
                        new SelectListItem { Text = "Bilgi İşlem", Value = "BilgiIslem" },
                        new SelectListItem { Text = "İnsan Kaynakları", Value = "IK" },
                        new SelectListItem { Text = "İdari İşler", Value = "IdariIsler" },
                        new SelectListItem { Text = "Lider", Value = "Lider" },
                        new SelectListItem { Text = "Dokümantasyon", Value = "Dokumantasyon" },
                        new SelectListItem { Text = "Merkez", Value = "Merkez" },
                        new SelectListItem { Text = "Yerleşke", Value = "Yerleske" }
                    }, "Value", "Text"), "Rol Seçiniz", new { @class = "lf--input", required = "required" })
                    @Html.ValidationMessageFor(model => model.Role)
                </div>

                <div class="flex-row">
                    <label class="lf--label" for="Name">
                        <i class='bx bx-user'></i>
                    </label>
