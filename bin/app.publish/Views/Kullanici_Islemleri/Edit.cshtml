                    }, "Value", "Text"), "Şehir Seçiniz", new { @class = "lf--input", required = "required" })
                    @Html.ValidationMessageFor(model => model.UserInfo.FirstOrDefault().Sehir)
                </div>

                <div class="flex-row">
                    <label class="lf--label" for="Ulke">
                        <i class='bx bx-map'></i>
                    </label>
                    @Html.DropDownListFor(model => model.UserInfo.FirstOrDefault().Ulke, new SelectList(new List<SelectListItem>
                            {
                        new SelectListItem { Text = "Türkiye", Value = "Türkiye" }
                    }, "Value", "Text"), "Ülke Seçiniz", new { @class = "lf--input", required = "required" })
                    @Html.ValidationMessageFor(model => model.UserInfo.FirstOrDefault().Ulke)
                </div>

                <div class="flex-row">
                    <label class="lf--label" for="Postakodu">
                        <i class='bx bx-envelope'></i>
                    </label>
                    @Html.EditorFor(model => model.UserInfo.FirstOrDefault().Postakodu, new { htmlAttributes = new { @class = "lf--input", placeholder = "Posta Kodu" } })
                    @Html.ValidationMessageFor(model => model.UserInfo.FirstOrDefault().Postakodu)
                </div>

                <div class="flex-row">
                    <label class="lf--label" for="KanGrubu">
                        <i class='bx bx-droplet'></i>
                    </label>
                    @Html.DropDownListFor(model => model.UserInfo.FirstOrDefault().KanGrubu, new SelectList(new List<SelectListItem>
                            {
                        new SelectListItem { Text = "A Rh+", Value = "A Rh+" },
                        new SelectListItem { Text = "A Rh-", Value = "A Rh-" },
