                    @Html.EditorFor(model => model.UserInfo.FirstOrDefault().DogumTarihi, new { htmlAttributes = new { @class = "lf--input", placeholder = "Doğum Tarihi", type = "date" } })
                    @Html.ValidationMessageFor(model => model.UserInfo.FirstOrDefault().DogumTarihi)
