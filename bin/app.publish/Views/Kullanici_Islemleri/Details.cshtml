@model MZDNETWORK.Models.User

@{
    ViewBag.Title = "Kullanıcı Detayları";
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="color:white;" class="container">

    <div class="dilek-istek-form login-form">
        <hr />
        <dl class="dl-horizontal">
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Username)</dt>
                <dd>@Html.DisplayFor(model => model.Username)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Password)</dt>
                <dd>@Html.DisplayFor(model => model.Password)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Role)</dt>
                <dd>@Html.DisplayFor(model => model.Role)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Surname)</dt>
                <dd>@Html.DisplayFor(model => model.Surname)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Department)</dt>
                <dd>@Html.DisplayFor(model => model.Department)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Position)</dt>
                <dd>@Html.DisplayFor(model => model.Position)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Intercom)</dt>
                <dd>@Html.DisplayFor(model => model.Intercom)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.InternalEmail)</dt>
                <dd>@Html.DisplayFor(model => model.InternalEmail)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.ExternalEmail)</dt>
                <dd>@Html.DisplayFor(model => model.ExternalEmail)</dd>
            </div>
            <div class="detail-row">
                <dt>@Html.DisplayNameFor(model => model.Sicil)</dt>
                <dd>@Html.DisplayFor(model => model.Sicil)</dd>
            </div>
            @if (Model.UserInfo != null && Model.UserInfo.Any())
            {
                var userInfo = Model.UserInfo.FirstOrDefault();
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.Email)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.Email)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.RealPhoneNumber)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.RealPhoneNumber)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.Adres)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.Adres)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.Adres2)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.Adres2)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.Sehir)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.Sehir)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.Ulke)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.Ulke)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.Postakodu)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.Postakodu)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.KanGrubu)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.KanGrubu)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.DogumTarihi)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.DogumTarihi)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.Cinsiyet)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.Cinsiyet)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => userInfo.MedeniDurum)</dt>
                    <dd>@Html.DisplayFor(model => userInfo.MedeniDurum)</dd>
                </div>
            }
        </dl>
        <p style="display: flex; gap: 10px;">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "lf--submit", style = "text-decoration: none;" })
            @Html.ActionLink("Geri Dön", "Index", null, new { @class = "lf--submit", style = "text-decoration: none;" })
        </p>
    </div>
</body>
<style>
    .login-form {
        width: 90vw;
        max-width: 600px;
        margin: 0 auto;
        overflow: auto;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 5px;
        border: 1px solid #ddd;
        margin-bottom: 5px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    dt {
        font-weight: bold;
        color: #333;
        flex: 1;
    }

    dd {
        margin-left: 0;
        color: #555;
        word-break: break-all;
    }

    .form-actions {
        margin-top: 20px;
    }

    .lf--submit {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
    }

        .lf--submit:hover {
            background-color: #0056b3;
        }
</style>

