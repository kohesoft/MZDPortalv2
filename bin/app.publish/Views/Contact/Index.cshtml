@using MZDNETWORK.Models
@model IEnumerable<User>

<head>
    <link rel="stylesheet" href="~/Content/all.min.css" />
    <link rel="stylesheet" href="~/Content/Contact.css" />
    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<section class="container" style="max-width:100%; max-height:100%;">
    <div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Rehber</h3>
                <div class="card-toolbar">
                    <input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Kullanıcıları ara..." class="form-control" style="width: 300px;">
                    @if (User.IsInRole("Yonetici") || User.IsInRole("Sys") || User.IsInRole("IK") || User.IsInRole("IdariIsler") || User.IsInRole("BilgiIslem"))
                    {
                        <button onclick="exportToExcel()" class="btn btn-primary ml-2">Excel'e Aktar</button>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="max-height: 550px; overflow-y: auto;">
                    <table class="table table-striped table-bordered table-hover" id="userTable">
                        <thead class="thead-fixed">
                            <tr>
                                <th onclick="sortTable(0)">Sicil</th>
                                <th onclick="sortTable(1)">Adı</th>
                                <th onclick="sortTable(2)">Soyadı</th>
                                <th onclick="sortTable(3)">Departman ve Pozisyon</th>
                                <th onclick="sortTable(4)">Dahili</th>
                                <th onclick="sortTable(5)">Cep Tel</th>
                                <th onclick="sortTable(6)">İç mail</th>
                                <th onclick="sortTable(7)">Dış mail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Sicil</td>
                                    <td>@user.Name</td>
                                    <td>@user.Surname</td>
                                    <td>
                                        <div>@user.Department</div>
                                        <div>@user.Position</div>
                                    </td>
                                    <td>@user.Intercom</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.InternalEmail</td>
                                    <td>@user.ExternalEmail</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div id="recordCount" class="mt-0">
                    Toplam Kayıt: @Model.Count()
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function searchTable() {
        var input, filter, table, tbody, tr, td, i, j, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("userTable");
        tbody = table.getElementsByTagName("tbody")[0];
        tr = tbody.getElementsByTagName("tr");

        var visibleCount = 0;
        for (i = 0; i < tr.length; i++) {
            tr[i].style.display = "none";
            td = tr[i].getElementsByTagName("td");
            for (j = 0; j < td.length; j++) {
                if (td[j]) {
                    txtValue = td[j].textContent || td[j].innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                        visibleCount++;
                        break;
                    }
                }
            }
        }
        document.getElementById("recordCount").innerText = "Toplam Kayıt: " + visibleCount;
    }

    function exportToExcel() {
        var table = document.getElementById("userTable");
        var rows = table.getElementsByTagName("tr");
        var data = [];

        for (var i = 1; i < rows.length; i++) { // Başlık satırını atlamak için i = 1'den başlatın
            var cells = rows[i].getElementsByTagName("td");
            var rowData = [];
            for (var j = 0; j < cells.length; j++) {
                rowData.push(cells[j].innerText);
            }
            data.push(rowData);
        }

        console.log("Gönderilen veri:", data); // Konsola log ekleyin

        var xhr = new XMLHttpRequest();
        xhr.open("POST", "/Contact/ExportToExcel", true);
        xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
        xhr.responseType = "blob";
        xhr.onload = function () {
            if (xhr.status === 200) {
                var blob = new Blob([xhr.response], { type: "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" });
                var link = document.createElement("a");
                link.href = window.URL.createObjectURL(blob);
                link.download = "KullaniciListesi.xlsx";
                link.click();
                console.log("Excel dosyası başarıyla indirildi.");
            } else {
                console.error("Excel dosyası indirilirken bir hata oluştu.");
            }
        };
        xhr.onerror = function () {
            console.error("Excel dosyası indirilirken bir hata oluştu.");
        };
        xhr.send(JSON.stringify(data));
    }


    function sortTable(n) {
        var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
        table = document.getElementById("userTable");
        switching = true;
        dir = "asc";
        while (switching) {
            switching = false;
            rows = table.rows;
            for (i = 1; i < (rows.length - 1); i++) {
                shouldSwitch = false;
                x = rows[i].getElementsByTagName("TD")[n];
                y = rows[i + 1].getElementsByTagName("TD")[n];
                if (dir == "asc") {
                    if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                        shouldSwitch = true;
                        break;
                    }
                } else if (dir == "desc") {
                    if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                        shouldSwitch = true;
                        break;
                    }
                }
            }
            if (shouldSwitch) {
                rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                switching = true;
                switchcount++;
            } else {
                if (switchcount == 0 && dir == "asc") {
                    dir = "desc";
                    switching = true;
                }
            }
        }
    }
</script>

<style>
    .card-toolbar {
        display: flex;
        justify-content: flex-end;
    }

    th {
        cursor: pointer;
    }

    .thead-fixed th {
        position: sticky;
        top: 0;
        background-color: white;
        z-index: 1;
    }
</style>
