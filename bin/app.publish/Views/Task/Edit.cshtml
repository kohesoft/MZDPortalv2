@model MZDNETWORK.Models.Task

@{
    ViewBag.Title = "Görev Düzenle";
}

<head>
    <link rel="stylesheet" href="~/Content/all.min.css" />
    <link rel="stylesheet" href="~/Content/Task.css" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<section class="container" style="max-width:100%; max-height:100%;">
    <div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Görev Düzenle</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Görev</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <label for="Title">Görevin Adı</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Description">Görev Açıklaması</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="StartDate">Görevin Başlangıç Tarihi</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local" })
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="EndDate">Görevin Bitiş Tarihi</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local" })
                                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Username">Atanacak Kullanıcı</label>
                            <div class="col-md-10">
                                @Html.DropDownList("Username", (IEnumerable<SelectListItem>)ViewData["Username"], new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="todoItemsContainer">Görev Tanımı</label>
                            <div class="col-md-10">
                                <div id="todoItemsContainer">
                                    @foreach (var item in ViewBag.TodoItems)
                                    {
                                        <div class="todo-item">
                                            <input type="text" name="todoDescriptions" class="form-control" value="@item.Description" placeholder="Görev Açıklaması" />
                                            <input type="text" name="additionalDescriptions" class="form-control" value="@item.AdditionalDescription" placeholder="Ek Açıklama" />
                                            <input type="datetime-local" name="dueDates" class="form-control" value="@item.DueDate.ToString("yyyy-MM-ddTHH:mm")" placeholder="Geç Tarih" />
                                            <hr />
                                        </div>
                                    }
                                </div>
                                <button type="button" id="addTodoItem" class="btn btn-primary">Görev Ekle</button>
                                <input type="submit" value="Kaydet" class="btn btn-success" />
                                @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.getElementById('addTodoItem').addEventListener('click', function () {
            var container = document.getElementById('todoItemsContainer');
            var div = document.createElement('div');
            div.className = 'todo-item';
            div.innerHTML = '<input type="text" name="todoDescriptions" class="form-control" placeholder="Görev Açıklaması" />' +
                '<input type="text" name="additionalDescriptions" class="form-control" placeholder="Ek Açıklama" />' +
                '<input type="datetime-local" name="dueDates" class="form-control" placeholder="Geç Tarih" />' +
                '<hr />';
            container.appendChild(div);
        });
    </script>
}
