@model MZDNETWORK.Models.Task

@{
    ViewBag.Title = "Görev Düzenle";
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
</head>

<section class="min-h-screen flex justify-center">
    <div class="w-full max-w-2xl">
        <div class="bg-white/90 shadow-2xl rounded-2xl border border-gray-200">
            <div class="px-8 py-6 border-b border-gray-100 flex items-center gap-2">
                <svg class="w-7 h-7 text-yellow-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M9 13h3l8-8a2.828 2.828 0 10-4-4l-8 8v3zm-2 6h12" />
                </svg>
                <h3 class="text-2xl font-bold text-gray-800">Görev Düzenle</h3>
            </div>
            <div class="px-8 py-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                    <div>
                        <h4 class="text-lg font-semibold mb-4 text-indigo-700">Görev Bilgileri</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-red-600 mb-4" })

                        <div class="mb-5">
                            <label for="Title" class="block text-sm font-medium text-gray-700 mb-1">Görevin Adı</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-input block w-full rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition shadow-sm py-2 px-3 bg-white/80 placeholder-gray-400" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-red-600 text-xs mt-1" })
                        </div>

                        <div class="mb-5">
                            <label for="Description" class="block text-sm font-medium text-gray-700 mb-1">Görev Açıklaması</label>
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-input block w-full rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition shadow-sm py-2 px-3 bg-white/80 placeholder-gray-400" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-red-600 text-xs mt-1" })
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5 mb-5">
                            <div>
                                <label for="StartDate" class="block text-sm font-medium text-gray-700 mb-1">Başlangıç Tarihi</label>
                                @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-input block w-full rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition shadow-sm py-2 px-3 bg-white/80 placeholder-gray-400", @type = "datetime-local" })
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-red-600 text-xs mt-1" })
                            </div>
                            <div>
                                <label for="EndDate" class="block text-sm font-medium text-gray-700 mb-1">Bitiş Tarihi</label>
                                @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-input block w-full rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition shadow-sm py-2 px-3 bg-white/80 placeholder-gray-400", @type = "datetime-local" })
                                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-red-600 text-xs mt-1" })
                            </div>
                        </div>

                        <div class="mb-5">
                            <label for="Username" class="block text-sm font-medium text-gray-700 mb-1">Atanacak Kullanıcı</label>
                            @Html.DropDownList("Username", (IEnumerable<SelectListItem>)ViewData["Username"], new { @class = "form-select block w-full rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition shadow-sm py-2 px-3 bg-white/80" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-red-600 text-xs mt-1" })
                        </div>

                        <div class="mb-6">
                            <label for="todoItemsContainer" class="block text-sm font-medium text-gray-700 mb-2">Görev Tanımı</label>
                            <div id="todoItemsContainer">
                                @foreach (var item in ViewBag.TodoItems)
                                {
                                    <div class="todo-item grid grid-cols-1 md:grid-cols-3 gap-3 mb-3 bg-yellow-50/50 rounded-lg p-3 shadow-sm">
                                        <input type="text" name="todoDescriptions" class="form-input rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition py-2 px-3 bg-white/80 placeholder-gray-400" value="@item.Description" placeholder="Görev Açıklaması" />
                                        <input type="text" name="additionalDescriptions" class="form-input rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition py-2 px-3 bg-white/80 placeholder-gray-400" value="@item.AdditionalDescription" placeholder="Ek Açıklama" />
                                        <input type="datetime-local" name="dueDates" class="form-input rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition py-2 px-3 bg-white/80 placeholder-gray-400" value="@item.DueDate.ToString("yyyy-MM-ddTHH:mm")" placeholder="Geç Tarih" />
                                    </div>
                                }
                            </div>
                            <button type="button" id="addTodoItem" class="flex items-center gap-2 mt-2 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg shadow transition">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                                </svg>
                                Görev Ekle
                            </button>
                        </div>

                        <div class="flex flex-col md:flex-row gap-3 mt-8">
                            <input type="submit" value="Kaydet" class="w-full md:w-auto bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg shadow transition cursor-pointer" />
                            @Html.ActionLink("Geri Dön", "Index", null, new { @class = "w-full md:w-auto bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-lg shadow transition text-center" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.getElementById('addTodoItem').addEventListener('click', function () {
            var container = document.getElementById('todoItemsContainer');
            var div = document.createElement('div');
            div.className = 'todo-item grid grid-cols-1 md:grid-cols-3 gap-3 mb-3 bg-yellow-50/50 rounded-lg p-3 shadow-sm';
            div.innerHTML =
                '<input type="text" name="todoDescriptions" class="form-input rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition py-2 px-3 bg-white/80 placeholder-gray-400" placeholder="Görev Açıklaması" />' +
                '<input type="text" name="additionalDescriptions" class="form-input rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition py-2 px-3 bg-white/80 placeholder-gray-400" placeholder="Ek Açıklama" />' +
                '<input type="datetime-local" name="dueDates" class="form-input rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition py-2 px-3 bg-white/80 placeholder-gray-400" placeholder="Geç Tarih" />';
            container.appendChild(div);
        });
    </script>
}
