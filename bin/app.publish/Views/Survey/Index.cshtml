@model List<MZDNETWORK.Models.Survey>

<h2>Anketler</h2>
@if (User.IsInRole("Yonetici") || User.IsInRole("Sys") || User.IsInRole("IK"))
{
    <a href="@Url.Action("Create", "Survey")" class="btn btn-success mb-3">Yeni Anket Oluştur</a>
}
<table class="table table-modern table-blue">
    <thead>
        <tr>
            <th>Anket Adı</th>
            <th>Açıklama</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Kalan Süre</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var survey in Model)
        {
            <tr>
                <td>@survey.Title</td>
                <td>
                    @if (survey.Description.Length > 100)
                    {
                        <span>@survey.Description.Substring(0, 100)...</span>
                        <a href="javascript:void(0);" class="no-loading" onclick="showFullDescription('@survey.Description')">devamını oku</a>
                    }
                    else
                    {
                        <span>@survey.Description</span>
                    }
                </td>
                <td>@survey.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@survey.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <span class="timer" data-end-time="@survey.EndDate.ToString("o")"></span>
                </td>
                <td>
                    <div class="btn-group-vertical">
                        @if (survey.EndDate > DateTime.Now)
                        {
                            <a href="javascript:void(0);" onclick="checkSurvey(@survey.ID)" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> Cevapla
                            </a>
                        }

                        @if (User.IsInRole("Yonetici") || User.IsInRole("Sys") || User.IsInRole("IK"))
                        {
                            <a href="@Url.Action("SurveyResults", "Survey", new { surveyId = survey.ID })" class="btn btn-sm btn-info">
                                <i class="fas fa-chart-bar"></i> Sonuçları Gör
                            </a>
                            <a href="javascript:void(0);" onclick="deleteSurvey(@survey.ID)" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="surveyModal" tabindex="-1" role="dialog" aria-labelledby="surveyModalLabel" aria-hidden="true" style="z-index:9999;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="surveyModalLabel">Uyarı</h5>
            </div>
            <div class="modal-body">
                Bu anketi daha önce yanıtladınız.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function checkSurvey(surveyId) {
            $.getJSON('@Url.Action("HasAnsweredSurvey", "Answer")', { surveyId: surveyId }, function (hasAnswered) {
                if (hasAnswered) {
                    $('#surveyModal').modal('show');
                    setTimeout(function() {
                        location.reload();
                    }, 3000);
                } else {
                    window.location.href = '@Url.Action("TakeSurvey", "Answer")' + '?surveyId=' + surveyId;
                }
            });
        }

        function deleteSurvey(surveyId) {
            if (confirm('Bu anketi silmek istediğinizden emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Survey")',
                    type: 'POST',
                    data: { id: surveyId },
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        alert('Anket silinirken bir hata oluştu.');
                    }
                });
            } else {
                location.reload();
            }
        }

        function updateTimers() {
            $(".timer").each(function () {
                var endTime = new Date($(this).data("end-time"));
                var now = new Date();
                var remainingTime = endTime - now;

                if (remainingTime > 0) {
                    var hours = Math.floor((remainingTime % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    var minutes = Math.floor((remainingTime % (1000 * 60 * 60)) / (1000 * 60));
                    var seconds = Math.floor((remainingTime % (1000 * 60)) / 1000);
                    $(this).text(hours + ":" + minutes + ":" + seconds);
                } else {
                    $(this).text("Süre doldu");
                }
            });
        }

        setInterval(updateTimers, 1000);

        function showFullDescription(description) {
            alert(description);
        }
    </script>
}

