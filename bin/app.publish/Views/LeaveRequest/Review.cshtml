@model MZDNETWORK.Models.LeaveRequest
@using System.Web.Mvc

@{
    ViewBag.Title = "İzin Talebi İnceleme";
}

<div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-xl shadow-xl overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-600 to-indigo-800 px-8 py-6">
                    <h3 class="text-2xl font-bold text-white">İzin Talebi İnceleme</h3>
                    <p class="mt-2 text-indigo-100">Lütfen izin talebini detaylı inceleyip kararınızı belirtiniz</p>
                </div>
                <div class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Talep Eden</h5>
                            <p class="text-base font-medium text-gray-900">@Model.RequestingUser.Username</p>
                        </div>
                        <div class="text-right">
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Talep Tarihi</h5>
                            <p class="text-base font-medium text-gray-900">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">İzin Türü</h5>
                            <p class="text-base font-medium text-gray-900">@MZDNETWORK.Helpers.EnumDisplayHelper.ToDisplayName(Model.LeaveType)</p>
                        </div>
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Başlangıç Tarihi</h5>
                            <p class="text-base font-medium text-gray-900">@Model.StartDate.ToShortDateString()</p>
                        </div>
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Bitiş Tarihi</h5>
                            <p class="text-base font-medium text-gray-900">@Model.EndDate.ToShortDateString()</p>
                        </div>
                    </div>

                    <div class="mb-8">
                        <h5 class="text-sm font-medium text-gray-500 mb-2">İzin Nedeni</h5>
                        <p class="text-base text-gray-900 bg-gray-50 rounded-lg p-4">@Model.Reason</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-8">
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Açıklama</h5>
                            <p class="text-base text-gray-900 bg-gray-50 rounded-lg p-4">@Model.Description</p>
                        </div>
                    }

                    @using (Html.BeginForm("Review", "LeaveRequest", new { id = Model.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="space-y-6 bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Karar</label>
                                <div>
@{
    var supOptions = new List<SelectListItem> {
        new SelectListItem { Text = "Onayla", Value = ((int)MZDNETWORK.Models.LeaveStatus.Approved).ToString() },
        new SelectListItem { Text = "Reddet", Value = ((int)MZDNETWORK.Models.LeaveStatus.Rejected).ToString() }
    };

    var mgrOptions = new List<SelectListItem> {
        new SelectListItem { Text = "Onayla", Value = ((int)MZDNETWORK.Models.LeaveStatus.Approved).ToString() },
        new SelectListItem { Text = "Şartlı Onayla", Value = ((int)MZDNETWORK.Models.LeaveStatus.ConditionallyApproved).ToString() },
        new SelectListItem { Text = "Reddet", Value = ((int)MZDNETWORK.Models.LeaveStatus.Rejected).ToString() }
    };

    var optionList = Model.Status == MZDNETWORK.Models.LeaveStatus.PendingSupervisor ? supOptions : mgrOptions;
}
                                    @Html.DropDownListFor(m => m.Status, optionList, new { @class = "block w-full rounded-lg border-2 border-gray-200 bg-white px-4 py-3 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-200" })
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Onay/Red Nedeni</label>
                                <div>
                                    @Html.TextArea("approvalReason", null, new { @class = "block w-full rounded-lg border-2 border-gray-200 bg-white px-4 py-3 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-200", rows = "4", placeholder = "Lütfen kararınızın nedenini açıklayınız..." })
                                </div>
                            </div>

                            <div class="flex justify-end space-x-4">
                                @Html.ActionLink("İptal", "AdminDashboard", null, new { @class = "inline-flex items-center px-6 py-3 border-2 border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" })
                                <button type="submit" class="inline-flex items-center px-6 py-3 border-2 border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                                    <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                    Kaydet
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 