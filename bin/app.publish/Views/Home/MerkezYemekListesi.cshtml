@{
    var photos = Directory.GetFiles(Server.MapPath("~/UploadPhotosMerkez"));
}

<head>
    <link rel="stylesheet" href="~/Content/all.min.css" />
    <link rel="stylesheet" href="~/Content/Contact.css" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<section class="container" style="max-width:100%; max-height:100%;">
    <div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Merkez Yemek Listesi</h3>
            </div>
            <div class="card-body">
                <div class="photo-list" style="max-height: 100%; overflow-y: auto;">
                    <ul class="list-unstyled">
                        @foreach (var photo in photos)
                        {
                            var fileName = Path.GetFileName(photo);
                            <li class="mb-3">
                                <img src="~/UploadPhotosMerkez/@fileName" alt="@fileName" class="img-fluid" />
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .photo-list {
        max-height: 550px;
        overflow-y: auto;
    }

        .photo-list img {
            display: block;
            max-width: 100%;
            height: auto;
        }
</style>