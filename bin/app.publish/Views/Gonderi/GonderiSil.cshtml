
@model Gonderi

@{
    ViewBag.Title = "Gönderi Sil";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='~/Content/boxicons.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/gonderisil.css" />
</head>
<body>
    <div class="gonderiSil-container">
        <div class="gonderiSil-card">
            <div class="gonderiSil-card-header">
                <i class='bx bx-trash gonderiSil-icon-delete'></i>
                <h2 class="gonderiSil-title">Gönderi Sil</h2>
            </div>

            <div class="gonderiSil-card-body">
                <div class="gonderiSil-warning">
                    <i class='bx bx-error-circle gonderiSil-icon-warning'></i>
                    <p class="gonderiSil-warning-text">Bu gönderiyi silmek istediğinizden emin misiniz?</p>
                </div>

                <div class="gonderiSil-content-preview">
                    <div class="gonderiSil-preview-header">
                        <i class='bx bx-news gonderiSil-icon-news'></i>
                        <h3 class="gonderiSil-preview-title">@Model.Title</h3>
                    </div>
                    <div class="gonderiSil-preview-body">
                        <p class="gonderiSil-preview-text">@Model.Content</p>
                    </div>
                </div>

                <form class="gonderiSil-form" action="@Url.Action("GonderiSil", "Gonderi", new { id = Model.Id })" method="post">
                    @Html.AntiForgeryToken()
                    <div class="gonderiSil-actions">
                        <a href="@Url.Action("GonderiListele", "Gonderi")" class="gonderiSil-btn-cancel">
                            <i class='bx bx-arrow-back gonderiSil-btn-icon'></i>
                            İptal
                        </a>
                        <button type="submit" class="gonderiSil-btn-delete">
                            <i class='bx bx-trash gonderiSil-btn-icon'></i>
                            Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>