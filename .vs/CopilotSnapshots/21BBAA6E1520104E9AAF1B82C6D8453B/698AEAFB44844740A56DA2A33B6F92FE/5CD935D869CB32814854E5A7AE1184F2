<script>
$(document).ready(function () {
    console.log('Layout JavaScript starting - minimal version');

    function safeExecute(func, context) {
        try { return func.call(context); } catch (error) { console.error('Error in function:', error); return null; }
    }

    // Basic sidebar functionality only
    $('#closeSidebar').click(function () { safeExecute(function() { $('.sidebar').removeClass('active'); }); });
    $('#openSidebar').click(function(){ safeExecute(function() { $('.sidebar').addClass('active'); }); });

    // Basic dropdown functionality
    $(document).on('click', '.dropdown-toggle', function (e) {
        safeExecute(function() {
            e.stopPropagation();
            var $dropdownMenu = $(this).next('.dropdown-menu');
            $('.dropdown-menu').not($dropdownMenu).hide();
            $dropdownMenu.toggle();
        }.bind(this));
    });
    $(document).on('click', function (e) {
        safeExecute(function() { if (!$(e.target).closest('.dropdown-toggle, .dropdown-menu').length) { $('.dropdown-menu').hide(); } });
    });

    // Basic date/time update
    function updateDateTime() {
        safeExecute(function() {
            var now = new Date();
            var options = { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' };
            var dateTimeElement = document.getElementById('dateTime');
            if (dateTimeElement) { dateTimeElement.textContent = now.toLocaleString('tr-TR', options); }
        });
    }
    updateDateTime();
    setInterval(updateDateTime, 60000);

    // Minimal SignalR start (no handlers)
    setTimeout(function(){
        try {
            if (typeof $ !== 'undefined' && $.connection && $.connection.hub && $.connection.hub.state === $.signalR.connectionState.disconnected) {
                $.connection.hub.start().done(function(){ console.log('SignalR connected'); }).fail(function(err){ console.warn('SignalR connect failed', err); });
            }
        } catch (e) { console.warn('SignalR init error', e); }
    }, 500);

    window.onerror = function(msg, url, lineNo, columnNo, error) { console.error('Global error:', msg, 'at', url, ':', lineNo); return false; };

    console.log('Layout JavaScript initialized successfully - minimal version');
});
</script>

<!-- Mobilde menü açma düğmesi -->
<button id="openSidebar" class="sidebar-open-btn" type="button" aria-label="Menüyü Aç">
    <i class='bx bx-menu'></i>
</button></button>