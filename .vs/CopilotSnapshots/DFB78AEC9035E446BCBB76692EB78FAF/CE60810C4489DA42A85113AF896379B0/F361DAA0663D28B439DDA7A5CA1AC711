<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script>
    // Global variables
    let personelData = [];
    let availableUsers = [];
    let availableServices = [];
    let editingId = null;
    let currentView = 'cards';
    let currentShift = 'Mesai İçi';

    // Initialize
    $(document).ready(function() {
        loadPersonnelData();
        loadAvailableUsers();
        loadAvailableServices();
        loadStats();
        setupEventListeners();
    });

    function setupEventListeners() {
        $('#searchInput').on('input', performSearch);
        $('#serviceFilter').on('change', performSearch);
        $('#statusFilter').on('change', performSearch);
        $('#personelForm').on('submit', handleSubmit);
    }

    // Load personnel data from server
    function loadPersonnelData() {
        console.log('📊 ServicePersonnel: Loading personnel data...');
        $.get('@Url.Action("GetAll", "ServicePersonnel")')
            .done(function(response) {
                console.log('📊 ServicePersonnel: GetAll response:', response);
                if (response.success) {
                    personelData = response.data;
                    console.log('📊 ServicePersonnel: Data loaded:', personelData.length, 'records');
                    console.log('📊 ServicePersonnel: Sample data:', personelData.slice(0, 2));
                    renderCurrentView();
                } else {
                    console.error('❌ ServicePersonnel: Error loading data:', response.message);
                    // Eğer veri yoksa test verisi oluşturma butonu göster
                    showCreateDataSuggestion();
                }
            })
            .fail(function(xhr, status, error) {
                console.error('❌ ServicePersonnel: AJAX Error:', error);
                console.error('❌ ServicePersonnel: Status:', status);
                console.error('❌ ServicePersonnel: Response:', xhr.responseText);
                showCreateDataSuggestion();
            });
    }

    // Test verisi oluşturma önerisini göster
    function showCreateDataSuggestion() {
        const cardsContainer = $('#cardsView');
        const tableBody = $('#tableBody');
        const emptyState = $('#emptyState');

        // Cards view için empty state
        cardsContainer.html(`
            <div class="col-span-full bg-white rounded-xl shadow-lg p-8 text-center">
                <div class="mb-4">
                    <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz personel kaydı yok</h3>
                <p class="text-sm text-gray-500 mb-4">Servis personeli eklemek için önce test verisi oluşturun veya manuel olarak ekleyin.</p>
                <div class="space-y-2">
                    <button onclick="createTestData()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                        <span class="mr-2">📊</span>Test Verisi Oluştur
                    </button>
                    <button onclick="openModal('add')" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 ml-2">
                        <span class="mr-2">+</span>Manuel Ekle
                    </button>
                </div>
            </div>
        `);

        // Table view için empty state göster
        tableBody.empty();
        emptyState.removeClass('hidden');
    }

    // Test verisi oluşturma fonksiyonu
    function createTestData() {
        if (confirm('Test verisi oluşturulsun mu? Bu işlem örnek personel kayıtları ve servis konfigürasyonları ekleyecektir.')) {
            console.log('🔧 Creating test data...');
            
            // Önce servis konfigürasyonları oluştur
            $.post('@Url.Action("CreateDefaultServices", "ServiceConfiguration")')
                .always(function(response) {
                    console.log('🔧 CreateDefaultServices response:', response);
                    
                    // Sonra personel verisi oluştur
                    $.get('@Url.Action("CreateSampleData", "ServicePersonnel")')
                        .done(function(response) {
                            console.log('🔧 CreateSampleData response:', response);
                            if (response.success) {
                                alert('✅ Test verisi başarıyla oluşturuldu!');
                                // Tüm verileri yeniden yükle
                                loadPersonnelData();
                                loadAvailableUsers();
                                loadAvailableServices();
                                loadStats();
                            } else {
                                alert('⚠️ Test verisi oluşturulurken sorun: ' + response.message);
                                console.error('CreateSampleData error:', response);
                            }
                        })
                        .fail(function(xhr, status, error) {
                            console.error('❌ CreateSampleData AJAX error:', error);
                            console.error('Response:', xhr.responseText);
                            alert('❌ Test verisi oluşturulurken hata oluştu. Console loglarını kontrol edin.');
                        });
                })
                .fail(function(xhr, status, error) {
                    console.error('❌ CreateDefaultServices AJAX error:', error);
                    console.error('Response:', xhr.responseText);
                });
        }
    }

    // Test verisi varsa yükle, yoksa yönlendir
    function handleTestData() {
        $.get('@Url.Action("HasTestData", "ServicePersonnel")')
            .done(function(response) {
                if (response.hasData) {
                    loadPersonnelData();
                } else {
                    window.location.href = '@Url.Action("Index", "ServicePersonnel")';
                }
            })
            .fail(function() {
                console.error('❌ Test verisi kontrolü sırasında hata oluştu.');
                alert('❌ Bir hata oluştu. Lütfen tekrar deneyin.');
            });
    }

    // Test verisi oluşturulduktan sonra yönlendirme
    function afterTestDataCreated() {
        alert('✅ Test verisi başarıyla oluşturuldu! Şimdi sisteme giriş yapabilirsiniz.');
        window.location.href = '@Url.Action("Index", "ServicePersonnel")';
    }

    // Load available users for selection
    function loadAvailableUsers() {
        $.get('@Url.Action("GetAvailableUsers", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    availableUsers = response.data;
                    updateUserDropdown();
                }
            });
    }

    // Load available services for selection
    function loadAvailableServices() {
        $.get('@Url.Action("GetAvailableServices", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    availableServices = response.data;
                    updateServiceDropdowns();
                }
            });
    }

    function updateUserDropdown() {
        const userSelect = $('#userId');
        userSelect.find('option:not(:first)').remove();
        
        availableUsers.forEach(user => {
            userSelect.append(`<option value="${user.Id}">${user.FullName} (${user.Username})</option>`);
        });
    }

    function updateServiceDropdowns() {
        // Update modal service dropdown
        const serviceSelect = $('#service');
        serviceSelect.find('option:not(:first)').remove();
        
        // Update filter dropdown
        const filterSelect = $('#serviceFilter');
        filterSelect.find('option:not(:first)').remove();
        
        availableServices.forEach(service => {
            serviceSelect.append(`<option value="${service.ServiceCode}">${service.ServiceName}</option>`);
            filterSelect.append(`<option value="${service.ServiceCode}">${service.ServiceName}</option>`);
        });
    }

    // Load statistics
    function loadStats() {
        $.get('@Url.Action("GetStats", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    updateStatsDisplay(response.data);
                }
            });
    }

    function updateStatsDisplay(stats) {
        $('#totalPersonel').text(stats.totalPersonnel);
        $('#activeServices').text(stats.activeServices);
        $('#pendingCount').text(stats.pendingCount);
        $('#monthlyAdded').text(stats.monthlyAdded);
    }

    function renderCurrentView() {
        console.log('📊 ServicePersonnel: Rendering current view:', currentView);
        console.log('📊 ServicePersonnel: Current shift:', currentShift);
        console.log('📊 ServicePersonnel: Personnel data:', personelData.length, 'records');
        
        if (currentView === 'cards') {
            renderCards();
        } else {
            renderTable();
        }
    }

    function renderCards() {
        console.log('📊 ServicePersonnel: Rendering cards view...');
        const cardsContainer = $('#cardsView');
        
        // Filter by current shift and group personnel by service
        const filteredData = personelData.filter(person => person.ShiftType === currentShift);
        console.log('📊 ServicePersonnel: Filtered data for shift "' + currentShift + '":', filteredData.length);
        
        if (filteredData.length === 0) {
            console.log('📊 ServicePersonnel: No data for current shift');
            showCreateDataSuggestion();
            return;
        }
        
        const serviceGroups = {};
        filteredData.forEach(person => {
            const serviceKey = person.Service || person.ServiceCode;
            if (!serviceGroups[serviceKey]) {
                serviceGroups[serviceKey] = [];
            }
            serviceGroups[serviceKey].push(person);
        });

        console.log('📊 ServicePersonnel: Service groups:', Object.keys(serviceGroups));

        // Generate service cards
        const cardsHTML = Object.keys(serviceGroups).map(serviceCode => {
            const personnel = serviceGroups[serviceCode];
            const activeCount = personnel.filter(p => p.Status === 'Aktif').length;
            const serviceConfig = availableServices.find(s => s.ServiceCode === serviceCode);
            const serviceName = serviceConfig ? serviceConfig.ServiceName : (personnel[0].ServiceName || serviceCode);
            
            console.log('📊 ServicePersonnel: Creating card for service:', serviceCode, 'personnel count:', personnel.length);
            
            return `
                <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden fade-in">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full ${getServiceIconBg(serviceCode, serviceConfig)}">
                                    ${getServiceIcon(serviceCode, serviceConfig)}
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-lg font-semibold text-gray-900">${serviceName}</h3>
                                    <p class="text-sm text-gray-500">${personnel.length} personel • ${activeCount} aktif</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-3 max-h-64 overflow-y-auto">
                            ${personnel.map(person => `
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-150">
                                    <div class="flex items-center">
                                        <div class="h-8 w-8 rounded-full bg-gradient-to-r from-blue-400 to-blue-600 flex items-center justify-center text-white text-sm font-medium">
                                            ${person.FirstName ? person.FirstName.charAt(0) : '?'}${person.LastName ? person.LastName.charAt(0) : '?'}
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium text-gray-900">${person.FirstName || 'N/A'} ${person.LastName || 'N/A'}</p>
                                            <p class="text-xs text-gray-500">${person.Username || 'N/A'} • ${person.ShiftType || 'N/A'}</p>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${getStatusBadgeClass(person.Status)}">
                                            ${person.Status || 'N/A'}
                                        </span>
                                        <div class="flex space-x-1">
                                            <button onclick="editPersonel(${person.Id})" class="text-indigo-600 hover:text-indigo-900 text-xs">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                            </button>
                                            <button onclick="deletePersonel(${person.Id})" class="text-red-600 hover:text-red-900 text-xs">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                </div>
            `;
        }).join('');

        console.log('📊 ServicePersonnel: Generated cards HTML length:', cardsHTML.length);
        cardsContainer.html(cardsHTML);
        console.log('📊 ServicePersonnel: Cards rendered successfully');
    }

    function renderTable() {
        console.log('📊 ServicePersonnel: Rendering table view...');
        const tbody = $('#tableBody');
        const emptyState = $('#emptyState');
        
        // Filter by current shift
        const filteredData = personelData.filter(person => person.ShiftType === currentShift);
        console.log('📊 ServicePersonnel: Table filtered data for shift "' + currentShift + '":', filteredData.length);
        
        if (filteredData.length === 0) {
            tbody.empty();
            emptyState.removeClass('hidden');
            return;
        }
        
        emptyState.addClass('hidden');
        
        const tableHTML = filteredData.map(person => `
            <tr class="hover:bg-gray-50 transition-colors duration-150 fade-in">
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 h-10 w-10">
                            <div class="h-10 w-10 rounded-full bg-gradient-to-r from-blue-400 to-blue-600 flex items-center justify-center text-white font-medium">
                                ${person.FirstName ? person.FirstName.charAt(0) : '?'}${person.LastName ? person.LastName.charAt(0) : '?'}
                            </div>
                        </div>
                        <div class="ml-4">
                            <div class="text-sm font-medium text-gray-900">${person.FirstName || 'N/A'} ${person.LastName || 'N/A'}</div>
                        </div>
                    </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-sm text-gray-900">${person.Username || 'N/A'}</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getServiceBadgeClass(person.Service)}">
                        ${person.ServiceName || person.Service || 'N/A'}
                    </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getShiftBadgeClass(person.ShiftType)}">
                        ${person.ShiftType || 'N/A'}
                    </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getStatusBadgeClass(person.Status)}">
                        ${person.Status || 'N/A'}
                    </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <button onclick="editPersonel(${person.Id})" class="text-indigo-600 hover:text-indigo-900 mr-3 transition-colors duration-150">
                        Düzenle
                    </button>
                    <button onclick="deletePersonel(${person.Id})" class="text-red-600 hover:text-red-900 transition-colors duration-150">
                        Sil
                    </button>
                </td>
            </tr>
        `).join('');

        tbody.html(tableHTML);
        console.log('📊 ServicePersonnel: Table rendered successfully');
    }

    // Helper functions for styling
    function getServiceBadgeClass(serviceCode) {
        const serviceConfig = availableServices.find(s => s.ServiceCode === serviceCode);
        if (serviceConfig && serviceConfig.ColorCode) {
            // Convert hex color to appropriate Tailwind classes
            return `bg-gray-100 text-gray-800`; // Default styling, can be enhanced
        }
        
        // Fallback to old logic for backward compatibility
        const classes = {
            'IT': 'bg-blue-100 text-blue-800',
            'HR': 'bg-green-100 text-green-800',
            'Finance': 'bg-yellow-100 text-yellow-800',
            'Marketing': 'bg-purple-100 text-purple-800',
            'Operations': 'bg-gray-100 text-gray-800'
        };
        return classes[serviceCode] || 'bg-gray-100 text-gray-800';
    }

    function getServiceIcon(serviceCode, serviceConfig) {
        if (serviceConfig && serviceConfig.IconClass) {
            // You can implement custom icon logic here based on IconClass
            return `<div class="w-6 h-6 bg-current rounded"></div>`;
        }
        
        // Fallback icons
        const icons = {
            'IT': '<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>',
            'HR': '<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>',
            'default': '<svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>'
        };
        return icons[serviceCode] || icons['default'];
    }

    function getServiceIconBg(serviceCode, serviceConfig) {
        if (serviceConfig && serviceConfig.ColorCode) {
            // You can implement dynamic background colors here
            return 'bg-gray-100';
        }
        
        const backgrounds = {
            'IT': 'bg-blue-100',
            'HR': 'bg-green-100',
            'Finance': 'bg-yellow-100',
            'Marketing': 'bg-purple-100',
            'Operations': 'bg-gray-100'
        };
        return backgrounds[serviceCode] || 'bg-gray-100';
    }

    function getStatusBadgeClass(status) {
        const classes = {
            'Aktif': 'bg-green-100 text-green-800',
            'Pasif': 'bg-red-100 text-red-800',
            'Beklemede': 'bg-yellow-100 text-yellow-800'
        };
        return classes[status] || 'bg-gray-100 text-gray-800';
    }

    function getShiftBadgeClass(shiftType) {
        const classes = {
            'Mesai İçi': 'bg-blue-100 text-blue-800',
            'Mesai Sonrası': 'bg-orange-100 text-orange-800'
        };
        return classes[shiftType] || 'bg-gray-100 text-gray-800';
    }

    // Search functionality
    function performSearch() {
        const searchTerm = $('#searchInput').val();
        const serviceFilter = $('#serviceFilter').val();
        const statusFilter = $('#statusFilter').val();

        console.log('📊 ServicePersonnel: Performing search:', { searchTerm, serviceFilter, statusFilter, currentShift });

        $.get('@Url.Action("Search", "ServicePersonnel")', {
            term: searchTerm,
            service: serviceFilter,
            status: statusFilter,
            shiftType: currentShift
        })
        .done(function(response) {
            if (response.success) {
                personelData = response.data;
                console.log('📊 ServicePersonnel: Search results:', personelData.length, 'records');
                renderCurrentView();
            }
        })
        .fail(function(xhr, status, error) {
            console.error('❌ ServicePersonnel: Search error:', error);
        });
    }

    // View and shift switching functions
    function switchView(view) {
        currentView = view;
        const cardsView = $('#cardsView');
        const tableView = $('#tableView');
        const cardBtn = $('#cardViewBtn');
        const tableBtn = $('#tableViewBtn');

        console.log('📊 ServicePersonnel: Switching view to:', view);

        if (view === 'cards') {
            cardsView.removeClass('hidden');
            tableView.addClass('hidden');
            cardBtn.addClass('bg-blue-600 text-white').removeClass('text-gray-600 hover:text-gray-900');
            tableBtn.removeClass('bg-blue-600 text-white').addClass('text-gray-600 hover:text-gray-900');
        } else {
            cardsView.addClass('hidden');
            tableView.removeClass('hidden');
            tableBtn.addClass('bg-blue-600 text-white').removeClass('text-gray-600 hover:text-gray-900');
            cardBtn.removeClass('bg-blue-600 text-white').addClass('text-gray-600 hover:text-gray-900');
        }
        renderCurrentView();
    }

    function switchShift(shift) {
        currentShift = shift;
        const workBtn = $('#workHoursBtn');
        const afterBtn = $('#afterHoursBtn');

        console.log('📊 ServicePersonnel: Switching shift to:', shift);

        if (shift === 'Mesai İçi') {
            workBtn.addClass('bg-green-600 text-white').removeClass('text-gray-600 hover:text-gray-900');
            afterBtn.removeClass('bg-green-600 text-white').addClass('text-gray-600 hover:text-gray-900');
        } else {
            afterBtn.addClass('bg-green-600 text-white').removeClass('text-gray-600 hover:text-gray-900');
            workBtn.removeClass('bg-green-600 text-white').addClass('text-gray-600 hover:text-gray-900');
        }

        renderCurrentView();
        loadStats();
    }

    // Debug function
    function debugInfo() {
        console.log('🐛 ServicePersonnel: Getting debug info...');
        $.get('@Url.Action("DebugInfo", "ServicePersonnel")')
            .done(function(response) {
                console.log('🐛 ServicePersonnel: Debug response:', response);
                if (response.success) {
                    const data = response.data;
                    const info = `
DATABASE DEBUG BİLGİLERİ:
━━━━━━━━━━━━━━━━━━━━━━━━━━

📊 SAYILAR:
• Toplam Kullanıcı: ${data.TotalUsers}
• Toplam Servis Konfig: ${data.TotalServiceConfigs}
• Toplam Servis Personeli: ${data.TotalServicePersonnel}
• Aktif Servis Personeli: ${data.ActiveServicePersonnel}
• Veritabanı Bağlantısı: ${data.DatabaseConnection}

⏰ VARDIYA İSTATİSTİKLERİ:
• Mesai İçi: ${data.ShiftStatistics.MesaiIci}
• Mesai Sonrası: ${data.ShiftStatistics.MesaiSonrasi}
• Tüm ShiftType Değerleri: ${data.ShiftStatistics.AllShiftTypes.join(', ')}

👥 ÖRNEK KULLANICILAR:
${data.SampleUsers.map(u => `• ${u.Username} (${u.Name} ${u.Surname})`).join('\n')}

⚙️ ÖRNEK SERVİSLER:
${data.SampleServices.map(s => `• ${s.ServiceCode}: ${s.ServiceName} (${s.IsActive ? 'Aktif' : 'Pasif'})`).join('\n')}

👷 ÖRNEK PERSONEL:
${data.SamplePersonnel.map(p => `• ${p.UserName} (${p.FirstName} ${p.LastName}) - ${p.ServiceCode} - "${p.ShiftType}" - ${p.Status}`).join('\n')}

🎯 MEVCUT FİLTRE DURUMU:
• Aranan Shift: "${currentShift}"
• Toplam Yüklenen Veri: ${personelData.length}
• Filtrelenmiş Veri: ${personelData.filter(p => p.ShiftType === currentShift).length}
                    `;
                    alert(info);
                } else {
                    alert('Debug bilgisi alınamadı: ' + response.message);
                    console.error('Debug error:', response);
                }
            })
            .fail(function(xhr, status, error) {
                console.error('🐛 ServicePersonnel: Debug AJAX error:', error);
                alert('Debug bilgisi alınırken hata: ' + error);
            });
    }

    // Recreate test data function
    function recreateTestData() {
        if (confirm('Mevcut personel verilerini silip yeniden oluşturmak istediğinizden emin misiniz? Bu işlem geri alınamaz!')) {
            console.log('🔄 Recreating test data...');
            
            $.get('@Url.Action("RecreateSampleData", "ServicePersonnel")')
                .done(function(response) {
                    console.log('🔄 RecreateSampleData response:', response);
                    if (response.success) {
                        alert('✅ ' + response.message);
                        // Tüm verileri yeniden yükle
                        loadPersonnelData();
                        loadAvailableUsers();
                        loadAvailableServices();
                        loadStats();
                    } else {
                        alert('⚠️ Veri yenileme sırasında sorun: ' + response.message);
                        console.error('RecreateSampleData error:', response);
                    }
                })
                .fail(function(xhr, status, error) {
                    console.error('❌ RecreateSampleData AJAX error:', error);
                    console.error('Response:', xhr.responseText);
                    alert('❌ Veri yenileme sırasında hata oluştu. Console loglarını kontrol edin.');
                });
        }
    }

    // Modal functions
    function openModal(mode, id = null) {
        const modal = $('#modal');
        const modalTitle = $('#modalTitle');
        const form = $('#personelForm')[0];
        
        editingId = id;
        
        console.log('📊 ServicePersonnel: Opening modal in', mode, 'mode for ID:', id);
        
        if (mode === 'add') {
            modalTitle.text('Yeni Kayıt');
            form.reset();
            $('#personnelId').val('0');
            $('#shiftType').val(currentShift);
            loadAvailableUsers(); // Refresh available users
        } else if (mode === 'edit' && id) {
            modalTitle.text('Kayıt Düzenle');
            
            // Load personnel data for editing
            const person = personelData.find(p => p.Id === id);
            if (person) {
                $('#personnelId').val(person.Id);
                
                // For editing, we need to include the current user in the dropdown
                loadAvailableUsersForEdit(person.UserId);
                
                $('#service').val(person.Service);
                $('#shiftType').val(person.ShiftType);
                $('#status').val(person.Status);
            }
        }
        
        modal.removeClass('hidden');
        $('body').css('overflow', 'hidden');
    }

    function loadAvailableUsersForEdit(currentUserId) {
        $.get('@Url.Action("GetAvailableUsers", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    const userSelect = $('#userId');
                    userSelect.find('option:not(:first)').remove();
                    
                    // Add current user first
                    const currentUser = personelData.find(p => p.UserId === currentUserId);
                    if (currentUser) {
                        userSelect.append(`<option value="${currentUserId}" selected>${currentUser.FirstName} ${currentUser.LastName} (${currentUser.Username})</option>`);
                    }
                    
                    // Add available users
                    response.data.forEach(user => {
                        userSelect.append(`<option value="${user.Id}">${user.FullName} (${user.Username})</option>`);
                    });
                }
            });
    }

    function closeModal() {
        $('#modal').addClass('hidden');
        $('body').css('overflow', 'auto');
        editingId = null;
    }

    // Form submission
    function handleSubmit(e) {
        e.preventDefault();
        
        console.log('📊 ServicePersonnel: Handling form submission...');
        
        const formData = {
            Id: parseInt($('#personnelId').val()),
            UserId: parseInt($('#userId').val()),
            ServiceCode: $('#service').val(),
            ShiftType: $('#shiftType').val(),
            Status: $('#status').val()
        };

        console.log('📊 ServicePersonnel: Form data:', formData);

        const url = editingId ? '@Url.Action("Edit", "ServicePersonnel")' : '@Url.Action("Create", "ServicePersonnel")';
        
        $.post(url, formData)
            .done(function(response) {
                console.log('📊 ServicePersonnel: Submit response:', response);
                if (response.success) {
                    closeModal();
                    loadPersonnelData();
                    loadAvailableUsers();
                    loadStats();
                    alert(response.message);
                } else {
                    alert('Hata: ' + response.message);
                    if (response.errors) {
                        console.log('Validation errors:', response.errors);
                    }
                }
            })
            .fail(function(xhr, status, error) {
                console.error('❌ ServicePersonnel: Submit error:', error);
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            });
    }

    // Edit and Delete functions
    function editPersonel(id) {
        console.log('📊 ServicePersonnel: Editing personnel ID:', id);
        openModal('edit', id);
    }

    function deletePersonel(id) {
        if (confirm('Bu kaydı silmek istediğinizden emin misiniz?')) {
            console.log('📊 ServicePersonnel: Deleting personnel ID:', id);
            $.post('@Url.Action("Delete", "ServicePersonnel")', { id: id })
                .done(function(response) {
                    console.log('📊 ServicePersonnel: Delete response:', response);
                    if (response.success) {
                        loadPersonnelData();
                        loadAvailableUsers();
                        loadStats();
                        alert(response.message);
                    } else {
                        alert('Hata: ' + response.message);
                    }
                })
                .fail(function(xhr, status, error) {
                    console.error('❌ ServicePersonnel: Delete error:', error);
                    alert('Silme işlemi sırasında bir hata oluştu.');
                });
        }
    }

    // Close modal when clicking outside or pressing Escape
    $(document).on('click', '#modal', function(e) {
        if (e.target === this) {
            closeModal();
        }
    });

    $(document).on('keydown', function(e) {
        if (e.key === 'Escape') {
            closeModal();
        }
    });
</script>