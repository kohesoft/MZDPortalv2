using System;
using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;

namespace MZDNETWORK.Models
{
    public class ServicePersonnel
    {
        [Key]
        public int Id { get; set; }

        [Required]
        [Display(Name = "Kullanıcı")]
        public int UserId { get; set; }

        [Required]
        [StringLength(50)]
        [Display(Name = "Servis")]
        public string ServiceCode { get; set; }

        [Required]
        [StringLength(20)]
        [Display(Name = "Mesai Durumu")]
        public string ShiftType { get; set; }

        [Required]
        [StringLength(20)]
        [Display(Name = "Durum")]
        public string Status { get; set; }

        [Display(Name = "Oluşturulma Tarihi")]
        public DateTime CreatedDate { get; set; }

        [Display(Name = "Güncellenme Tarihi")]
        public DateTime? UpdatedDate { get; set; }

        // Navigation properties
        [ForeignKey("UserId")]
        public virtual User User { get; set; }

        // ServiceConfiguration will be loaded manually in the controller
        // to avoid EF6 relationship mapping issues with string foreign keys
        [NotMapped]
        public virtual ServiceConfiguration ServiceConfiguration { get; set; }

        // Computed properties for display (backward compatibility)
        [Display(Name = "Ad")]
        [NotMapped]
        public string FirstName
        {
            get { return User?.Name ?? ""; }
        }

        [Display(Name = "Soyad")]
        [NotMapped]
        public string LastName
        {
            get { return User?.Surname ?? ""; }
        }

        [Display(Name = "Tam Ad")]
        [NotMapped]
        public string FullName
        {
            get { return User?.FullName ?? ""; }
        }

        [Display(Name = "Kullanıcı Adı")]
        [NotMapped]
        public string Username
        {
            get { return User?.Username ?? ""; }
        }

        [Display(Name = "Servis Adı")]
        [NotMapped]
        public string ServiceName
        {
            get { return ServiceConfiguration?.ServiceName ?? ServiceCode; }
        }

        // For backward compatibility, keep Service property
        [NotMapped]
        public string Service
        {
            get { return ServiceCode; }
            set { ServiceCode = value; }
        }

        public ServicePersonnel()
        {
            CreatedDate = DateTime.Now;
        }
    }
}