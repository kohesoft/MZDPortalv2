                                        </td>
                                        <td class="gonderi-td-content">
                                            <div class="gonderi-content-preview">
                                                @{
                                                    var contentText = System.Text.RegularExpressions.Regex.Replace(gonderi.Content ?? "", "<.*?>", "");
                                                    var shortContent = contentText.Length > 100 ? contentText.Substring(0, 100) + "..." : contentText;
                                                }
                                                @shortContent
                                            </div>
                                        </td>
                                        <td class="gonderi-td-date">
                                            @gonderi.CreatedAt.ToString("dd.MM.yyyy HH:mm")
