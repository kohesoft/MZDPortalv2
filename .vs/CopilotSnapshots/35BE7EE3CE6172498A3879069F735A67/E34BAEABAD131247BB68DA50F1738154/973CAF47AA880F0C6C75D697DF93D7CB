<!-- Silme Modal -->
<div id="gonderiDeleteModal" class="gonderi-modal">
    <div class="gonderi-modal-content">
        <div class="gonderi-modal-header">
            <i class='bx bx-trash gonderi-modal-icon'></i>
            <h3 class="gonderi-modal-title">Duyuru Sil</h3>
            <button type="button" class="gonderi-modal-close" onclick="closeDeleteModal()">
                <i class='bx bx-x'></i>
            </button>
        </div>
        <div class="gonderi-modal-body">
            <div class="gonderi-modal-warning">
                <i class='bx bx-error-circle gonderi-modal-warning-icon'></i>
                <p class="gonderi-modal-warning-text">Bu duyuruyu silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="gonderi-modal-info">
                <h4 class="gonderi-modal-info-title" id="deleteGonderiTitle"></h4>
            </div>
        </div>
        <div class="gonderi-modal-footer">
            <button type="button" class="gonderi-modal-btn-cancel" onclick="closeDeleteModal()">
                <i class='bx bx-x gonderi-modal-btn-icon'></i>
                İptal
            </button>
            <form id="deleteForm" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="gonderi-modal-btn-delete">
                    <i class='bx bx-trash gonderi-modal-btn-icon'></i>
                    Sil
                </button>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
        toolbar_mode: 'floating',
    });

    // Modal işlemleri
    function openDeleteModal(id, title) {
        document.getElementById('deleteGonderiTitle').textContent = title;
        document.getElementById('deleteForm').action = '@Url.Action("GonderiSil", "Gonderi")/' + id;

        var modal = document.getElementById('gonderiDeleteModal');
        modal.classList.add('show');

        // Sayfanın kaydırmasını engelle
        document.body.style.overflow = 'hidden';
    }

    function closeDeleteModal() {
        var modal = document.getElementById('gonderiDeleteModal');
        modal.classList.remove('show');

        // Sayfanın kaydırmasını geri aç
        document.body.style.overflow = '';
    }

    // Modal dışına tıklandığında kapatma
    window.onclick = function(event) {
        var modal = document.getElementById('gonderiDeleteModal');
        if (event.target == modal) {
            closeDeleteModal();
        }
    }
</script>

