<section class="gonderi-container" style="max-width:100%; max-height:100%;">
    <div class="gonderi-wrapper">
        <div class="gonderi-card">
            <div class="gonderi-card-header">
                <h3 class="gonderi-card-title">
                    <i class='bx bx-list-ul gonderi-icon-list'></i>
                    Duyurular
                </h3>
                <div class="gonderi-card-toolbar">
                    <a href="@Url.Action("GonderiOlustur", "Gonderi")" class="gonderi-btn-add">
                        <i class='bx bx-plus gonderi-icon-add'></i>
                        Yeni Duyuru
                    </a>
                </div>
            </div>
            <div class="gonderi-card-body">
                @if (TempData["Message"] != null)
                {
                    <div class="gonderi-alert gonderi-alert-success">
                        <i class='bx bx-check-circle gonderi-alert-icon'></i>
                        <span>@TempData["Message"]</span>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="gonderi-alert gonderi-alert-danger">
                        <i class='bx bx-error-circle gonderi-alert-icon'></i>
