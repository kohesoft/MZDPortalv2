@using MZDNETWORK.Models
@model Gonderi

@{
    ViewBag.Title = "Duyuru Detayı";
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='~/Content/boxicons.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/gonderidetay.css" />
</head>

<body>
    <div class="gonderiDetay-container">
        <div class="gonderiDetay-card">
            <div class="gonderiDetay-card-header">
                <h1 class="gonderiDetay-title">
                    <i class='bx bx-news gonderiDetay-icon'></i>
                    @Model.Title
                </h1>
                <div class="gonderiDetay-meta">
                    <span class="gonderiDetay-date">
                        <i class='bx bx-calendar gonderiDetay-meta-icon'></i>
                        @Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm", new System.Globalization.CultureInfo("tr-TR"))
                    </span>
                </div>
            </div>

            <div class="gonderiDetay-card-body">
                <div class="gonderiDetay-content">
                    @Html.Raw(Model.Content)
                </div>

                @if (Model.Ekler != null && Model.Ekler.Any())
                {
                    <div class="gonderiDetay-attachments">
                        <h3 class="gonderiDetay-attachments-title">
                            <i class='bx bx-paperclip gonderiDetay-attachments-icon'></i>
                            Ekler (@Model.Ekler.Count())
                        </h3>
                        
                        <div class="gonderiDetay-attachments-list">
                            @foreach (var ek in Model.Ekler.Where(e => e.IsActive))
                            {
                                <div class="gonderiDetay-attachment-item">
                                    <div class="gonderiDetay-attachment-info">
                                        <div class="gonderiDetay-attachment-icon">
                                            @{
                                                var extension = System.IO.Path.GetExtension(ek.OriginalFileName).ToLower();
                                                string iconClass = "bx-file";
                                                
                                                if (new[] { ".jpg", ".jpeg", ".png", ".gif", ".bmp" }.Contains(extension))
                                                    iconClass = "bx-image";
                                                else if (new[] { ".pdf" }.Contains(extension))
                                                    iconClass = "bx-file-pdf";
                                                else if (new[] { ".doc", ".docx" }.Contains(extension))
                                                    iconClass = "bx-file-doc";
                                                else if (new[] { ".xls", ".xlsx" }.Contains(extension))
                                                    iconClass = "bx-spreadsheet";
                                                else if (new[] { ".ppt", ".pptx" }.Contains(extension))
                                                    iconClass = "bx-slideshow";
                                                else if (new[] { ".zip", ".rar", ".7z" }.Contains(extension))
                                                    iconClass = "bx-archive";
                                            }
                                            <i class='bx @iconClass'></i>
                                        </div>
                                        <div class="gonderiDetay-attachment-details">
                                            <span class="gonderiDetay-attachment-name">@ek.OriginalFileName</span>
                                            <span class="gonderiDetay-attachment-meta">
                                                @{
                                                    var fileSize = ek.FileSize;
                                                    string sizeText = fileSize < 1024 ? $"{fileSize} B" :
                                                                     fileSize < 1024 * 1024 ? $"{fileSize / 1024:F1} KB" :
                                                                     $"{fileSize / (1024 * 1024):F1} MB";
                                                }
                                                @sizeText
                                                @if (ek.DownloadCount > 0)
                                                {
                                                    <span class="gonderiDetay-download-count">• @ek.DownloadCount indirme</span>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                    <div class="gonderiDetay-attachment-actions">
                                        @if (new[] { ".jpg", ".jpeg", ".png", ".gif", ".bmp" }.Contains(extension))
                                        {
                                            <a href="@Url.Action("ViewFile", "Gonderi", new { id = ek.Id })" 
                                               target="_blank" 
                                               class="gonderiDetay-btn gonderiDetay-btn-view">
                                                <i class='bx bx-show'></i>
                                                Görüntüle
                                            </a>
                                        }
                                        <a href="@Url.Action("DownloadFile", "Gonderi", new { id = ek.Id })" 
                                           class="gonderiDetay-btn gonderiDetay-btn-download">
                                            <i class='bx bx-download'></i>
                                            İndir
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="gonderiDetay-card-footer">
                <a href="@Url.Action("GonderiListele", "Gonderi")" class="gonderiDetay-btn-back">
                    <i class='bx bx-arrow-back'></i>
                    Geri Dön
                </a>
            </div>
        </div>
    </div>
</body>

