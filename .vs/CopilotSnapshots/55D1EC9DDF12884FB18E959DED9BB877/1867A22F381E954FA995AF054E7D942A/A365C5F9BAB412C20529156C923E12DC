@model IEnumerable<MZDNETWORK.Models.ChatGroup>
@{
    ViewBag.Title = "Sohbet";
}
<div class="flex flex-col md:flex-row gap-6 mt-6">
    <div class="w-full md:w-1/3 bg-white rounded-lg shadow p-4 border border-gray-200">
        <h2 class="text-xl font-bold mb-4 text-gray-800">Grup Seçimi</h2>
        <select id="chatGroupSelectPage" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-indigo-200 mb-4">
            <option value="">Grup Seçiniz</option>
            @foreach (var group in Model)
            {
                <option value="@group.Id">@group.Name</option>
            }
        </select>
        <button id="deselectGroup" class="w-full bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded transition mb-2">Seçimi Kaldır</button>
        <div class="mt-4">
            <h3 class="text-lg font-semibold text-gray-700 mb-2">Grup Bilgileri</h3>
            <div id="groupInfo" class="text-gray-600 text-sm"></div>
        </div>
    </div>
    <div class="w-full md:w-2/3 bg-white rounded-lg shadow p-4 border border-gray-200 flex flex-col">
        <h2 class="text-xl font-bold mb-4 text-gray-800">Sohbet</h2>
        <div id="messagesPage" class="flex-1 overflow-y-auto px-2 py-3 space-y-2 border rounded mb-4" style="max-height:350px;"></div>
        <div class="flex gap-2">
            <input type="text" id="messageInputPage" placeholder="Mesajınızı yazın..." class="flex-1 border border-gray-300 rounded-full px-4 py-2 focus:outline-none focus:ring focus:ring-indigo-200 transition" />
            <button id="sendButtonPage" class="bg-indigo-500 hover:bg-indigo-600 text-white rounded-full px-5 py-2 font-semibold transition">Gönder</button>
        </div>
    </div>
</div>
@section scripts {
<script>
$(function(){
    var selectedGroupId = '';
    $('#chatGroupSelectPage').on('change', function(){
        selectedGroupId = $(this).val();
        if(selectedGroupId){
            loadGroupMessages(selectedGroupId);
            var groupName = $(this).find('option:selected').text();
            $('#groupInfo').html('<b>Grup:</b> '+groupName);
        }else{
            $('#messagesPage').empty();
            $('#groupInfo').empty();
        }
    });
    $('#deselectGroup').on('click', function(){
        $('#chatGroupSelectPage').val('');
        $('#messagesPage').empty();
        $('#groupInfo').empty();
    });
    $('#sendButtonPage').on('click', function(){
        var message = $('#messageInputPage').val();
        if(!message || !selectedGroupId) return;
        $.post('@Url.Action("SendMessage", "Chat")', { user: '@User.Identity.Name', message: message, groupId: selectedGroupId }, function(){
            $('#messageInputPage').val('').focus();
            loadGroupMessages(selectedGroupId);
        });
    });
    function loadGroupMessages(groupId){
        $.get('@Url.Action("GetGroupMessages", "Chat")', { groupId: groupId }, function(data){
            $('#messagesPage').empty();
            if(data && data.length){
                data.forEach(function(msg){
                    var isMe = msg.UserName === '@User.Identity.Name';
                    var time = msg.SentAt ? new Date(msg.SentAt).toLocaleTimeString() : '';
                    var html = `<div class="flex ${isMe ? 'justify-end' : 'justify-start'}">
                        <div class="${isMe ? 'bg-indigo-100' : 'bg-white'} border ${isMe ? 'border-indigo-300' : 'border-gray-200'} px-4 py-2 rounded-2xl shadow text-sm max-w-xs min-w-[120px] break-words" style="max-width:70%; min-width:120px; word-break:break-word;${isMe ? 'margin-left:auto;' : ''}">
                            <div class="font-semibold text-indigo-700">${msg.UserName}</div>
                            <div>${msg.Content}</div>
                            <div class="text-xs text-gray-400 mt-1">${time}</div>
                        </div>
                    </div>`;
                    $('#messagesPage').append(html);
                });
            }
        });
    }
});
</script>
}
