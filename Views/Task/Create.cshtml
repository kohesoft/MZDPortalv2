@model MZDNETWORK.Models.Task

@{
    ViewBag.Title = "Görev Olştur";
}

<h2>Görev Olştur</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Görev</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        Görevin Adı
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            Görev Açıklaması
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Görevin Başlangıç Tarihi
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Görevin Bitiş Tarihi
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Atanacak Kullanıcı
            <div class="col-md-10">
                @Html.DropDownList("Username", (IEnumerable<SelectListItem>)ViewData["Username"], new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Görev Tanımı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div id="todoItemsContainer">
                    <div class="todo-item">
                        <input type="text" name="todoDescriptions" class="form-control" placeholder="Görev Açıklaması" />
                        <input type="text" name="additionalDescriptions" class="form-control" placeholder="Ek Açıklama" />
                        <input type="datetime-local" name="dueDates" class="form-control" placeholder="Geç Tarih" />
                    </div>
                </div>
                <button type="button" id="addTodoItem" class="btn btn-default">Görev Ekle</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

@section Scripts {
    <script>
        document.getElementById('addTodoItem').addEventListener('click', function () {
            var container = document.getElementById('todoItemsContainer');
            var div = document.createElement('div');
            div.className = 'todo-item';
            div.innerHTML = '<input type="text" name="todoDescriptions" class="form-control" placeholder="Todo item description" />' +
                '<input type="text" name="additionalDescriptions" class="form-control" placeholder="Additional description" />' +
                '<input type="datetime-local" name="dueDates" class="form-control" placeholder="Due date" />';
            container.appendChild(div);
        });
    </script>
}
