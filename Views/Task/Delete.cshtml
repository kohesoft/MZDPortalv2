@model MZDNETWORK.Models.Task

@{
    ViewBag.Title = "Görev Sil";
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
</head>

<section class="min-h-screen flex justify-center">
    <div class="w-full max-w-2xl">
        <div class="bg-white/90 shadow-2xl rounded-2xl border border-gray-200">
            <div class="px-8 py-6 border-b border-gray-100 flex items-center gap-2">
                <svg class="w-7 h-7 text-red-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <h3 class="text-2xl font-bold text-gray-800">Görev Sil</h3>
            </div>
            <div class="px-8 py-6">
                <h3 class="text-lg font-semibold text-red-700 mb-4">Bu görevi silmek istediğinizden emin misiniz?</h3>
                <div class="mb-6">
                    <h4 class="text-md font-medium text-indigo-700 mb-2">Görev Bilgileri</h4>
                    <div class="bg-indigo-50/50 rounded-lg p-4 shadow-sm grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2 text-gray-700">
                        <div>
                            <span class="font-semibold">Görevin Adı:</span>
                            <div class="ml-2">@Html.DisplayFor(model => model.Title)</div>
                        </div>
                        <div>
                            <span class="font-semibold">Görev Açıklaması:</span>
                            <div class="ml-2">@Html.DisplayFor(model => model.Description)</div>
                        </div>
                        <div>
                            <span class="font-semibold">Başlangıç Tarihi:</span>
                            <div class="ml-2">@Html.DisplayFor(model => model.StartDate)</div>
                        </div>
                        <div>
                            <span class="font-semibold">Bitiş Tarihi:</span>
                            <div class="ml-2">@Html.DisplayFor(model => model.EndDate)</div>
                        </div>
                        <div>
                            <span class="font-semibold">Atanan Kullanıcı:</span>
                            <div class="ml-2">@Html.DisplayFor(model => model.Username)</div>
                        </div>
                    </div>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="flex flex-col md:flex-row gap-3 mt-8">
                        <input type="submit" value="Sil" class="w-full md:w-auto bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-lg shadow transition cursor-pointer" />
                        @Html.ActionLink("Geri Dön", "Index", null, new { @class = "w-full md:w-auto bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-lg shadow transition text-center" })
                    </div>
                }
            </div>
        </div>
    </div>
</section>
