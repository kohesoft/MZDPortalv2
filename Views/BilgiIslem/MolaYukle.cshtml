@{
    ViewBag.Title = "Mola Yükle";
    var photos = Model as List<string>;
}

<head>
    <link rel="stylesheet" href="~/Content/all.min.css" />
    <link rel="stylesheet" href="~/Content/Contact.css" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />

</head>

<section class="container" style="max-width:100%; max-height:100%;">
    <div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Mola Yükle</h3>
            </div>
            <div class="card-body">
                <form action="@Url.Action("UploadMolaPhoto", "BilgiIslem")" method="post" enctype="multipart/form-data" class="mb-4">
                    <div class="input-group">
                        <input type="file" name="photo" class="form-control" />
                        <div class="input-group-append">
                            <input type="submit" value="Fotoğraf Yükle" class="btn btn-primary" />
                        </div>
                    </div>
                </form>

                <h3>Yüklenen Fotoğraflar</h3>
                @if (photos != null && photos.Count > 0)
                {
                    <div class="table-responsive" style="max-height: 550px; overflow-y: auto;">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Fotoğraf</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var photo in photos)
                                {
                                    <tr>
                                        <td>@photo</td>
                                        <td>
                                            <form action="@Url.Action("DeleteMola", "BilgiIslem")" method="post" style="display:inline;">
                                                <input type="hidden" name="fileName" value="@photo" />
                                                <input type="submit" value="Sil" class="btn btn-danger" />
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p>Yüklenmiş fotoğraf bulunmamaktadır.</p>
                }

                @if (TempData["Message"] != null)
                {
                    <p style="color:green;">@TempData["Message"]</p>
                }

                @if (TempData["Error"] != null)
                {
                    <p style="color:red;">@TempData["Error"]</p>
                }
            </div>
        </div>
    </div>
</section>


<style>
    .card-toolbar {
        display: flex;
        justify-content: flex-end;
    }
</style>
