@{
    ViewBag.Title = "Servis Personeli Yönetimi";
}

<head>
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
    <link rel="stylesheet" href="~/Content/serviceperson.css" />
</head>

<section class="min-h-screen bg-gray-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">Servis Personeli Yönetimi</h1>
                    <p class="text-gray-600 mt-2">Personel atama ve servis yönetimi</p>
                </div>
                <div class="flex gap-3">
                    <button onclick="openAddPersonnelModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Personel Ekle
                    </button>
                    <button onclick="openAddOvertimeModal()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                        </svg>
                        Mesai Ekle
                    </button>
                    <a href="@Url.Action("Index", "ServiceConfiguration")" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition-colors duration-200">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        </svg>
                        Servis Ayarları
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-blue-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 715.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Toplam Personel</p>
                        <p class="text-2xl font-bold text-gray-900" id="totalPersonnelCount">0</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-green-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Aktif Servisler</p>
                        <p class="text-2xl font-bold text-gray-900" id="activeServicesCount">0</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-yellow-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Bugün Mesai</p>
                        <p class="text-2xl font-bold text-gray-900" id="todayOvertimeCount">0</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-purple-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Toplam Araç</p>
                        <p class="text-2xl font-bold text-gray-900" id="totalVehiclesCount">0</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="bg-white rounded-xl shadow-lg">
            <div class="border-b border-gray-200">
                <nav class="-mb-px flex space-x-8 px-6" aria-label="Tabs">
                    <button onclick="switchTab('normal')" id="normalTab" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm border-blue-500 text-blue-600">
                        Normal Servis Personeli
                    </button>
                    <button onclick="switchTab('overtime')" id="overtimeTab" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                        Mesai Servisi Personeli
                    </button>
                </nav>
            </div>

            <!-- Personnel Table -->
            <div class="p-6">
                <div class="flex justify-between items-center mb-4">
                    <div class="flex gap-4">
                        <input type="text" id="searchInput" placeholder="Personel ara..." class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <select id="serviceFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Tüm Servisler</option>
                        </select>
                    </div>
                    <div>
                        <span class="text-sm text-gray-600">Toplam: <span id="personnelCount">0</span> personel</span>
                    </div>
                </div>

                <!-- Normal Personnel Table -->
                <div id="normalPersonnelTable" class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Personel</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Departman</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Servis</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Araç</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Şoför</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kalkış</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="normalPersonnelTableBody" class="bg-white divide-y divide-gray-200">
                        </tbody>
                    </table>
                </div>

                <!-- Overtime Personnel Table -->
                <div id="overtimePersonnelTable" class="overflow-x-auto hidden">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Personel</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Departman</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Servis</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Araç</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Şoför</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tarih</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="overtimePersonnelTableBody" class="bg-white divide-y divide-gray-200">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Personnel Modal -->
    <div id="addPersonnelModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Normal Servise Personel Ekle</h3>
                </div>
                <div class="px-6 py-4">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Personel</label>
                        <select id="userSelect" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Personel seçin...</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Servis</label>
                        <select id="serviceSelect" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Servis seçin...</option>
                        </select>
                    </div>
                </div>
                <div class="px-6 py-4 bg-gray-50 flex justify-end gap-3">
                    <button onclick="closeAddPersonnelModal()" class="px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300">
                        İptal
                    </button>
                    <button onclick="addPersonnel()" class="px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700">
                        Ekle
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Overtime Modal -->
    <div id="addOvertimeModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Mesai Servisine Personel Ekle</h3>
                    <p class="text-sm text-gray-600 mt-1">Sadece normal serviste kayıtlı personeller eklenebilir</p>
                </div>
                <div class="px-6 py-4">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Personel (Servis Kullananlar)</label>
                        <select id="serviceUserSelect" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-transparent">
                            <option value="">Personel seçin...</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Servis</label>
                        <select id="overtimeServiceSelect" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-transparent">
                            <option value="">Servis seçin...</option>
                        </select>
                    </div>
                </div>
                <div class="px-6 py-4 bg-gray-50 flex justify-end gap-3">
                    <button onclick="closeAddOvertimeModal()" class="px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300">
                        İptal
                    </button>
                    <button onclick="addOvertimePersonnel()" class="px-4 py-2 text-white bg-green-600 rounded-md hover:bg-green-700">
                        Ekle
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    let currentTab = 'normal';
    let normalPersonnel = [];
    let overtimePersonnel = [];
    let allUsers = [];
    let serviceUsers = [];
    let services = [];

    $(document).ready(function() {
        loadData();
        setupEventListeners();
    });

    function setupEventListeners() {
        $('#searchInput').on('input', filterPersonnel);
        $('#serviceFilter').on('change', filterPersonnel);
    }

    function loadData() {
        loadNormalPersonnel();
        loadOvertimePersonnel();
        loadUsers();
        loadServiceUsers();
        loadServices();
        loadStats();
    }

    function loadNormalPersonnel() {
        $.get('@Url.Action("GetPublicData", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    normalPersonnel = response.data;
                    if (currentTab === 'normal') {
                        renderNormalPersonnel();
                    }
                }
            });
    }

    function loadOvertimePersonnel() {
        $.get('@Url.Action("GetOvertimeData", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    overtimePersonnel = response.data;
                    if (currentTab === 'overtime') {
                        renderOvertimePersonnel();
                    }
                }
            });
    }

    function loadUsers() {
        $.get('@Url.Action("GetAllUsers", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    allUsers = response.data;
                    populateUserSelect();
                }
            });
    }

    function loadServiceUsers() {
        $.get('@Url.Action("GetServiceUsers", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    serviceUsers = response.data;
                    populateServiceUserSelect();
                }
            });
    }

    function loadServices() {
        $.get('@Url.Action("GetPublicServices", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    services = response.data;
                    populateServiceSelects();
                    populateServiceFilter();
                }
            });
    }

    function loadStats() {
        // Stats yükleme işlemi
        $('#totalPersonnelCount').text(normalPersonnel.length);
        $('#activeServicesCount').text(services.length);
        $('#todayOvertimeCount').text(overtimePersonnel.length);
        $('#totalVehiclesCount').text(services.filter(s => s.VehiclePlate).length);
    }

    function switchTab(tab) {
        currentTab = tab;
        
        // Update tab buttons
        if (tab === 'normal') {
            $('#normalTab').addClass('border-blue-500 text-blue-600').removeClass('border-transparent text-gray-500');
            $('#overtimeTab').removeClass('border-blue-500 text-blue-600').addClass('border-transparent text-gray-500');
            $('#normalPersonnelTable').removeClass('hidden');
            $('#overtimePersonnelTable').addClass('hidden');
            renderNormalPersonnel();
        } else {
            $('#overtimeTab').addClass('border-blue-500 text-blue-600').removeClass('border-transparent text-gray-500');
            $('#normalTab').removeClass('border-blue-500 text-blue-600').addClass('border-transparent text-gray-500');
            $('#overtimePersonnelTable').removeClass('hidden');
            $('#normalPersonnelTable').addClass('hidden');
            renderOvertimePersonnel();
        }
    }

    function renderNormalPersonnel() {
        const tbody = $('#normalPersonnelTableBody');
        tbody.empty();

        const filteredPersonnel = getFilteredPersonnel(normalPersonnel);
        $('#personnelCount').text(filteredPersonnel.length);

        filteredPersonnel.forEach(person => {
            const row = `
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">${person.UserFullName}</div>
                        <div class="text-sm text-gray-500">${person.Position || ''}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${person.Department || ''}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">${person.ServiceName}</div>
                        <div class="text-sm text-gray-500">${person.RouteName || ''}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${person.VehiclePlate || 'Belirtilmemiş'}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">${person.DriverName || 'Belirtilmemiş'}</div>
                        <div class="text-sm text-gray-500">${person.DriverPhone || ''}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${formatTime(person.DepartureTime)}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <button onclick="removePersonnel(${person.Id})" class="text-red-600 hover:text-red-900">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </td>
                </tr>
            `;
            tbody.append(row);
        });
    }

    function renderOvertimePersonnel() {
        const tbody = $('#overtimePersonnelTableBody');
        tbody.empty();

        const filteredPersonnel = getFilteredPersonnel(overtimePersonnel);
        $('#personnelCount').text(filteredPersonnel.length);

        filteredPersonnel.forEach(person => {
            const row = `
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">${person.UserFullName}</div>
                        <div class="text-sm text-gray-500">${person.Position || ''}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${person.Department || ''}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">${person.ServiceName}</div>
                        <div class="text-sm text-gray-500">${person.RouteName || ''}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${person.VehiclePlate || 'Belirtilmemiş'}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">${person.DriverName || 'Belirtilmemiş'}</div>
                        <div class="text-sm text-gray-500">${person.DriverPhone || ''}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${formatDate(person.ServiceDate)}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <button onclick="removeOvertimePersonnel(${person.Id})" class="text-red-600 hover:text-red-900">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </td>
                </tr>
            `;
            tbody.append(row);
        });
    }

    function getFilteredPersonnel(personnel) {
        const searchTerm = $('#searchInput').val().toLowerCase();
        const serviceFilter = $('#serviceFilter').val();

        return personnel.filter(person => {
            const matchesSearch = !searchTerm || 
                person.UserFullName.toLowerCase().includes(searchTerm) ||
                (person.Department && person.Department.toLowerCase().includes(searchTerm)) ||
                person.ServiceName.toLowerCase().includes(searchTerm);

            const matchesService = !serviceFilter || person.ServiceName === serviceFilter;

            return matchesSearch && matchesService;
        });
    }

    function filterPersonnel() {
        if (currentTab === 'normal') {
            renderNormalPersonnel();
        } else {
            renderOvertimePersonnel();
        }
    }

    function populateUserSelect() {
        const select = $('#userSelect');
        select.find('option:not(:first)').remove();
        allUsers.forEach(user => {
            select.append(`<option value="${user.Id}">${user.FullName} - ${user.Department}</option>`);
        });
    }

    function populateServiceUserSelect() {
        const select = $('#serviceUserSelect');
        select.find('option:not(:first)').remove();
        serviceUsers.forEach(user => {
            select.append(`<option value="${user.Id}">${user.FullName} - ${user.Department}</option>`);
        });
    }

    function populateServiceSelects() {
        const selects = ['#serviceSelect', '#overtimeServiceSelect'];
        selects.forEach(selector => {
            const select = $(selector);
            select.find('option:not(:first)').remove();
            services.forEach(service => {
                select.append(`<option value="${service.Id}">${service.ServiceName} - ${service.RouteName}</option>`);
            });
        });
    }

    function populateServiceFilter() {
        const select = $('#serviceFilter');
        select.find('option:not(:first)').remove();
        services.forEach(service => {
            select.append(`<option value="${service.ServiceName}">${service.ServiceName}</option>`);
        });
    }

    // Modal functions
    function openAddPersonnelModal() {
        $('#addPersonnelModal').removeClass('hidden');
    }

    function closeAddPersonnelModal() {
        $('#addPersonnelModal').addClass('hidden');
        $('#userSelect').val('');
        $('#serviceSelect').val('');
    }

    function openAddOvertimeModal() {
        $('#addOvertimeModal').removeClass('hidden');
    }

    function closeAddOvertimeModal() {
        $('#addOvertimeModal').addClass('hidden');
        $('#serviceUserSelect').val('');
        $('#overtimeServiceSelect').val('');
    }

    function addPersonnel() {
        const userId = $('#userSelect').val();
        const serviceId = $('#serviceSelect').val();

        if (!userId || !serviceId) {
            alert('Lütfen personel ve servis seçin.');
            return;
        }

        $.post('@Url.Action("AddServicePersonnel", "ServicePersonnel")', {
            userId: userId,
            serviceConfigurationId: serviceId
        })
        .done(function(response) {
            if (response.success) {
                alert(response.message);
                closeAddPersonnelModal();
                loadNormalPersonnel();
                loadServiceUsers(); // Refresh service users for overtime modal
                loadStats();
            } else {
                alert(response.message);
            }
        })
        .fail(function() {
            alert('Bir hata oluştu.');
        });
    }

    function addOvertimePersonnel() {
        const userId = $('#serviceUserSelect').val();
        const serviceId = $('#overtimeServiceSelect').val();

        if (!userId || !serviceId) {
            alert('Lütfen personel ve servis seçin.');
            return;
        }

        $.post('@Url.Action("AddOvertimeServicePersonnel", "ServicePersonnel")', {
            userId: userId,
            serviceConfigurationId: serviceId
        })
        .done(function(response) {
            if (response.success) {
                alert(response.message);
                closeAddOvertimeModal();
                loadOvertimePersonnel();
                loadStats();
            } else {
                alert(response.message);
            }
        })
        .fail(function() {
            alert('Bir hata oluştu.');
        });
    }

    function removePersonnel(id) {
        if (confirm('Bu personeli servisten çıkarmak istediğinizden emin misiniz?')) {
            $.post('@Url.Action("RemoveServicePersonnel", "ServicePersonnel")', { id: id })
            .done(function(response) {
                if (response.success) {
                    alert(response.message);
                    loadNormalPersonnel();
                    loadServiceUsers(); // Refresh service users
                    loadStats();
                } else {
                    alert(response.message);
                }
            })
            .fail(function() {
                alert('Bir hata oluştu.');
            });
        }
    }

    function removeOvertimePersonnel(id) {
        if (confirm('Bu personeli mesai servisinden çıkarmak istediğinizden emin misiniz?')) {
