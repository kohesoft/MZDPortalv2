@{
    ViewBag.Title = "Mesai Servisi";
}

<head>
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
    <link rel="stylesheet" href="~/Content/serviceperson.css" />
</head>

<section class="min-h-screen bg-gray-50 p-8">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-800">Mesai Servisi</h1>
                <p class="text-gray-600 mt-2">Mesaiye kalan çalışanların servis bilgileri - <span id="currentDate"></span></p>
            </div>
        </div>

        <!-- Search and Filter -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                    <input type="text" id="searchInput" placeholder="Personel veya servis ara..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                <div class="md:w-60">
                    <select id="serviceFilter" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Tüm Servisler</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-green-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 715.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Mesaiye Kalan</p>
                        <p class="text-2xl font-bold text-gray-900" id="overtimePersonnelCount">0</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-blue-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Aktif Servisler</p>
                        <p class="text-2xl font-bold text-gray-900" id="activeServicesCount">0</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-yellow-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Araç Sayısı</p>
                        <p class="text-2xl font-bold text-gray-900" id="vehicleCount">0</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="bg-purple-100 p-3 rounded-full">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Otomatik Temizleme</p>
                        <p class="text-xs text-gray-900" id="nextCleanupTime">Gece 00:00</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Alert -->
        <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-8">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-blue-700">
                        <strong>Önemli:</strong> Mesai servisi kayıtları her gün gece 00:00'da otomatik olarak temizlenir. 
                        Sadece bugün için geçerli kayıtlar gösterilmektedir.
                    </p>
                </div>
            </div>
        </div>

        <!-- Personnel Cards -->
        <div id="personnelContainer" class="space-y-6">
            <!-- Cards will be populated here -->
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden bg-white rounded-xl shadow-lg p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Bugün mesaiye kalan personel yok</h3>
            <p class="text-gray-500">Bugün için mesai servisine kayıt yapılmamış.</p>
        </div>
    </div>
</section>

<script>
    let overtimePersonnelData = [];
    let services = [];

    $(document).ready(function() {
        updateCurrentDate();
        loadOvertimePersonnelData();
        loadServices();
        setupEventListeners();
    });

    function setupEventListeners() {
        $('#searchInput').on('input', filterPersonnel);
        $('#serviceFilter').on('change', filterPersonnel);
    }

    function updateCurrentDate() {
        const today = new Date();
        const options = { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric', 
            weekday: 'long' 
        };
        $('#currentDate').text(today.toLocaleDateString('tr-TR', options));
    }

    function loadOvertimePersonnelData() {
        $.get('@Url.Action("GetOvertimeData", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    overtimePersonnelData = response.data;
                    renderPersonnel();
                    updateStats();
                } else {
                    showEmptyState();
                }
            })
            .fail(function() {
                showEmptyState();
            });
    }

    function loadServices() {
        $.get('@Url.Action("GetPublicServices", "ServicePersonnel")')
            .done(function(response) {
                if (response.success) {
                    services = response.data;
                    populateServiceFilter();
                }
            });
    }

    function populateServiceFilter() {
        const select = $('#serviceFilter');
        select.find('option:not(:first)').remove();
        services.forEach(service => {
            select.append(`<option value="${service.ServiceName}">${service.ServiceName}</option>`);
        });
    }

    function renderPersonnel() {
        const container = $('#personnelContainer');
        const filteredData = getFilteredPersonnel();

        if (filteredData.length === 0) {
            showEmptyState();
            return;
        }

        $('#emptyState').addClass('hidden');
        container.removeClass('hidden');

        // Group by service
        const groupedData = groupByService(filteredData);
        
        container.empty();
        Object.keys(groupedData).forEach(serviceName => {
            const serviceData = groupedData[serviceName];
            const serviceInfo = services.find(s => s.ServiceName === serviceName) || {};
            
            const serviceCard = `
                <div class="bg-white rounded-xl shadow-lg overflow-hidden border-l-4 border-green-500">
                    <div class="bg-gradient-to-r from-green-500 to-green-600 px-6 py-4 text-white">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-xl font-bold">${serviceName}</h3>
                                <p class="text-green-100">${serviceInfo.RouteName || 'Güzergah bilgisi yok'}</p>
                                ${serviceInfo.Description ? `<p class="text-green-100 text-sm mt-1">${serviceInfo.Description}</p>` : ''}
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-clock mr-2 text-green-200"></i>
                                    <span class="text-green-100 text-sm font-medium">Mesai Servisi</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold">${serviceData.length}</div>
                                <div class="text-green-100">Personel</div>
                                ${serviceInfo.Capacity ? `<div class="text-green-200 text-sm">Kapasite: ${serviceInfo.Capacity}</div>` : ''}
                            </div>
                        </div>
                        
                        <!-- Mesai Servisi Detayları -->
                        <div class="mt-4 pt-4 border-t border-green-400">
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
                                ${serviceInfo.VehiclePlate ? `
                                <div class="flex items-center">
                                    <i class="fas fa-car mr-2 text-green-200"></i>
                                    <div>
                                        <span class="text-green-200">Araç:</span><br>
                                        <span class="font-medium">${serviceInfo.VehiclePlate}</span>
                                    </div>
                                </div>` : ''}
                                
                                ${serviceInfo.DriverName ? `
                                <div class="flex items-center">
                                    <i class="fas fa-user-tie mr-2 text-green-200"></i>
                                    <div>
                                        <span class="text-green-200">Şoför:</span><br>
                                        <span class="font-medium">${serviceInfo.DriverName}</span>
                                    </div>
                                </div>` : ''}
                                
                                ${serviceInfo.PhoneNumber ? `
                                <div class="flex items-center">
                                    <i class="fas fa-phone mr-2 text-green-200"></i>
                                    <div>
                                        <span class="text-green-200">İletişim:</span><br>
                                        <span class="font-medium">${serviceInfo.PhoneNumber}</span>
                                    </div>
                                </div>` : ''}
                                
                                <div class="flex items-center">
                                    <i class="fas fa-moon mr-2 text-green-200"></i>
                                    <div>
                                        <span class="text-green-200">Mesai Saati:</span><br>
                                        <span class="font-medium">Akşam Vardiyası</span>
                                    </div>
                                </div>
                            </div>
                            
                            ${serviceInfo.Notes ? `
                            <div class="mt-3 p-3 bg-green-600 bg-opacity-30 rounded-lg">
                                <div class="flex items-start">
                                    <i class="fas fa-info-circle mr-2 text-green-200 mt-0.5"></i>
                                    <div>
                                        <span class="text-green-200 text-sm">Mesai Notu:</span>
                                        <p class="text-white text-sm mt-1">${serviceInfo.Notes}</p>
                                    </div>
                                </div>
                            </div>` : ''}
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                            ${serviceData.map(person => `
                                <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-lg p-4 hover:shadow-md transition-shadow border border-green-200">
                                    <div class="flex items-center">
                                        <div class="bg-gradient-to-br from-green-400 to-green-600 p-2 rounded-full text-white">
                                            <i class="fas fa-user-clock"></i>
                                        </div>
                                        <div class="ml-3 flex-1">
                                            <p class="text-sm font-bold text-gray-900">${person.UserFullName}</p>
                                            ${person.Department ? `<p class="text-xs text-green-600 font-medium">${person.Department}</p>` : ''}
                                            ${person.Position ? `<p class="text-xs text-gray-500">${person.Position}</p>` : ''}
                                            <div class="flex items-center mt-1">
                                                <i class="fas fa-clock text-green-500 mr-1" style="font-size: 10px;"></i>
                                                <span class="text-xs text-green-600 font-medium">Mesaiye Kaldı</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                </div>
            `;
            container.append(serviceCard);
        });
    }

    function groupByService(data) {
        return data.reduce((groups, person) => {
            const service = person.ServiceName;
            if (!groups[service]) {
                groups[service] = [];
            }
            groups[service].push(person);
            return groups;
        }, {});
    }

    function getFilteredPersonnel() {
        const searchTerm = $('#searchInput').val().toLowerCase();
        const serviceFilter = $('#serviceFilter').val();

        return overtimePersonnelData.filter(person => {
            const matchesSearch = !searchTerm || 
                person.UserFullName.toLowerCase().includes(searchTerm) ||
                (person.Department && person.Department.toLowerCase().includes(searchTerm)) ||
                person.ServiceName.toLowerCase().includes(searchTerm);

            const matchesService = !serviceFilter || person.ServiceName === serviceFilter;

            return matchesSearch && matchesService;
        });
    }

    function filterPersonnel() {
        renderPersonnel();
    }

    function updateStats() {
        $('#overtimePersonnelCount').text(overtimePersonnelData.length);
        
        // Mesai servislerinde kullanılan servis sayısı
        const usedServices = [...new Set(overtimePersonnelData.map(p => p.ServiceName))];
        $('#activeServicesCount').text(usedServices.length);
        
        // Araç sayısı (mesai servisleri için)
        const usedVehicles = [...new Set(overtimePersonnelData.map(p => p.VehiclePlate).filter(p => p))];
        $('#vehicleCount').text(usedVehicles.length);
    }

    function showEmptyState() {
        $('#personnelContainer').addClass('hidden');
        $('#emptyState').removeClass('hidden');
        
        // Reset stats
        $('#overtimePersonnelCount').text('0');
        $('#activeServicesCount').text('0');
        $('#vehicleCount').text('0');
    }

    function formatTime(timeString) {
        if (!timeString) return '';
        const time = new Date('1970-01-01T' + timeString);
        return time.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
    }

    // Auto refresh every 5 minutes to keep data current
    setInterval(function() {
        loadOvertimePersonnelData();
    }, 5 * 60 * 1000);
</script>
