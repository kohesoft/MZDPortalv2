@model MZDNETWORK.Models.User

@{
    ViewBag.Title = "Kullanıcı Sil";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body style="color:white;" class="container">

    <div class="container">
        <h3 style="color:red;">Bu kullanıcıyı silmek istediğinizden emin misiniz?</h3>
        <div class="dilek-istek-form login-form">
            <dl class="dl-horizontal">
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => model.Username)</dt>
                    <dd>@Html.DisplayFor(model => model.Username)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd>@Html.DisplayFor(model => model.Name)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => model.Surname)</dt>
                    <dd>@Html.DisplayFor(model => model.Surname)</dd>
                </div>
                <div class="detail-row">
                    <dt>@Html.DisplayNameFor(model => model.Sicil)</dt>
                    <dd>@Html.DisplayFor(model => model.Sicil)</dd>
                </div>
            </dl>
        </div>
        @using (Html.BeginForm("Delete", "Kullanici_Islemleri", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <button type="submit" class="btn btn-danger" style="z-index: 1; position: relative;">Kullanıcıyı Sil</button>
                <a href="@Url.Action("Index", "Kullanici_Islemleri")" class="btn btn-secondary" style="z-index: 1; position: relative;">İptal</a>
            </div>
        }
    </div>

</body>
<style>
    .login-form {
        width: 100%;
        margin: 0 auto;
        overflow: auto;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 5px;
        border: 1px solid #ddd;
        margin-bottom: 5px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    dt {
        font-weight: bold;
        color: #333;
        flex: 1;
    }

    dd {
        margin-left: 0;
        color: #555;
        word-break: break-all;
    }

    .form-group {
        margin-top: 20px;
    }

    .login-form {
        max-width: 30em;
    }

    ol, ul {
        padding-left: 0rem;
    }
</style>
</html>
