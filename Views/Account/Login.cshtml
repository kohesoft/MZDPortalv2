<!DOCTYPE html>
<html>
<head>
    <!-- Mevcut meta ve link etiketleri -->
    <link rel="stylesheet" href="~/Content/boxicons.min.css" />
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />


    <style>
        :root {
            --primary-color: #4361ee;
            --primary-hover: #3a56d4;
            --text-color: #333;
            --light-text: #6b7280;
            --background: #f9fafb;
            --input-bg: #ffffff;
            --shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --border-radius: 12px;
        }

        body {
            font-family: 'Segoe UI', 'Arial', 'Helvetica Neue', Arial, sans-serif;
            background-color: var(--background);
            color: var(--text-color);
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
        }

        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 30px;
            background: var(--input-bg);
            box-shadow: var(--shadow);
            border-radius: var(--border-radius);
            width: 100%;
            max-width: 450px;
            position: relative;
            overflow: hidden;
        }

            .form-container::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, var(--primary-color), #6979f8, #a5b4fc);
            }

        .login-form {
            padding: 20px 10px;
            width: 100%;
        }

        .form-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 25px;
            color: var(--text-color);
            text-align: center;
        }

        .lf--input {
            width: 100%;
            padding: 12px 15px;
            margin: 8px 0 20px;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
            background-color: #f9fafb;
            padding-left: 44px;
        }

            .lf--input:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
                background-color: white;
            }

        .lf--submit {
            width: 100%;
            padding: 12px;
            background: var(--primary-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .lf--submit:hover {
                background: var(--primary-hover);
                transform: translateY(-1px);
            }

            .lf--submit:active {
                transform: translateY(1px);
            }

        .flex-row {
            display: flex;
            align-items: center;
            position: relative;
        }

        .lf--label {
            position: absolute;
            left: 12px; /* 15px yerine 12px daha iyi hizalama için */
            top: 40%;
            transform: translateY(-50%);
            color: var(--light-text);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            width: 24px; /* ikonun genişliği kadar */
            pointer-events: none; /* input tıklanabilir kalsın */
        }
            .lf--label .bx {
                font-size: 18px;
                line-height: 1;
                display: block;
            }
        .error-message {
            color: #ef4444;
            margin-bottom: 20px;
            padding: 10px;
            background-color: #fee2e2;
            border-radius: 8px;
            font-size: 14px;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            text-align: center;
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            box-shadow: var(--shadow);
        }

        .alert-success {
            background-color: #d1fae5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        svg {
            fill: var(--light-text);
        }
    </style>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
        <script type="text/javascript">
        setTimeout(function () {
            window.location.href = '@TempData["RedirectUrl"]';
        }, 2000); // 2 saniye bekle
        </script>
    }

    <div class="container">
        <div class="form-container">
            <form class="login-form" action="@Url.Action("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] })" method="post" enctype="application/x-www-form-urlencoded">
                <h2 class="form-title">Giriş Yap</h2>
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                }
                <div class="flex-row">
                    <label class="lf--label" for="Username">
                        <i class="bx bx-user"></i>
                    </label>
                    <input id="Username" name="Username" class="lf--input" placeholder="Kullanıcı adı" type="text" required />
                    @Html.ValidationMessage("Username", "", new { @class = "text-danger" })
                </div>
                <div class="flex-row">
                    <label class="lf--label" for="Password">
                        <i class="bx bx-lock"></i>
                    </label>
                    <input id="Password" name="Password" class="lf--input" placeholder="Şifre (onaylı sıfırlama varsa boş bırakabilirsiniz)" type="password" />
                    @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                </div>

                <div class="flex-row" style="margin-bottom: 20px;">
                    <label class="remember-me">
                        <input type="checkbox" name="rememberMe" id="rememberMe" value="true" />
                        <span style="margin-left: 8px; color: var(--light-text);">Beni Hatırla</span>
                    </label>
                </div>

                <button class="lf--submit" type="submit">Giriş Yap</button>
                <div style="margin-top:10px; text-align:center;">
                    <a href='@Url.Action("ForgotPassword", "Account")' style="color: var(--primary-color); font-size: 14px;">Şifremi Unuttum</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
