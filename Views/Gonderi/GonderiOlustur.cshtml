
@using MZDNETWORK.Models
@model Gonderi

@{
    ViewBag.Title = "Duyuru Oluştur";
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='~/Content/boxicons.css' rel='stylesheet'>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <link rel="stylesheet" href="~/Content/gonderiolustur.css" />
</head>

<body>
    <div class="gonderiForm-container">
        <div class="gonderiForm-card">
            <div class="gonderiForm-card-header">
                <h3 class="gonderiForm-card-title">
                    <i class='bx bx-plus-circle gonderiForm-icon-create'></i>
                    Duyuru Oluştur
                </h3>
            </div>

            <div class="gonderiForm-card-body">
                <form class='gonderiForm-form' action="@Url.Action("GonderiOlustur", "Gonderi")" method="post">
                    @Html.AntiForgeryToken()

                    <div class="gonderiForm-input-group">
                        <label class="gonderiForm-label" for="Title">
                            <i class='bx bx-heading gonderiForm-label-icon'></i>
                            Başlık
                        </label>
                        <div class="gonderiForm-input-wrapper">
                            @Html.TextBoxFor(m => m.Title, new { @class = "gonderiForm-input", placeholder = "Duyuru başlığını giriniz..." })
                            @if (ViewData.ModelState["Title"] != null && ViewData.ModelState["Title"].Errors.Count > 0)
                            {
                                <div class="gonderiForm-error">
                                    <i class='bx bx-error-circle gonderiForm-error-icon'></i>
                                    <span>@ViewData.ModelState["Title"].Errors.First().ErrorMessage</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="gonderiForm-input-group">
                        <label class="gonderiForm-label" for="Content">
                            <i class='bx bx-text gonderiForm-label-icon'></i>
                            İçerik
                        </label>
                        <div class="gonderiForm-input-wrapper">
                            @Html.TextAreaFor(m => m.Content, new { @class = "gonderiForm-textarea", placeholder = "Duyuru içeriğini giriniz...", rows = 10 })
                            @if (ViewData.ModelState["Content"] != null && ViewData.ModelState["Content"].Errors.Count > 0)
                            {
                                <div class="gonderiForm-error">
                                    <i class='bx bx-error-circle gonderiForm-error-icon'></i>
                                    <span>@ViewData.ModelState["Content"].Errors.First().ErrorMessage</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="gonderiForm-actions">
                        <a href="@Url.Action("Index", "Gonderi")" class="gonderiForm-btn-cancel">
                            <i class='bx bx-arrow-back gonderiForm-btn-icon'></i>
                            Geri Dön
                        </a>
                        <button type="submit" class="gonderiForm-btn-submit">
                            <i class='bx bx-save gonderiForm-btn-icon'></i>
                            Yayınla
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            tinymce.init({
                selector: 'textarea.gonderiForm-textarea',
                plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                toolbar_mode: 'floating',
                height: 400,
                menubar: true,
                branding: false,
                statusbar: false,
                resize: true,
                setup: function (editor) {
                    editor.on('change', function () {
                        editor.save();
                    });
                }
            });
        });
    </script>
</body>