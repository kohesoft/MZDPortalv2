@{
    ViewBag.Title = "Servis Konfigürasyonu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/serviceconfig.css" />
</head>

<div class="min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">Servis Konfigürasyonu</h1>
                    <p class="text-gray-600 mt-2">Dinamik servis ayarlarını yönetin</p>
                </div>
                <div class="flex gap-3">
                    <a href="@Url.Action("Index", "ServicePersonnel")" class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 shadow-md hover:shadow-lg">
                        <span class="mr-2">←</span>Personel Yönetimi
                    </a>
                    <button onclick="createDefaultServices()" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 shadow-md hover:shadow-lg">
                        <span class="mr-2">🔧</span>Varsayılan Servisler
                    </button>
                    <button onclick="openModal('add')" class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 shadow-md hover:shadow-lg">
                        <span class="mr-2">+</span>Yeni Servis
                    </button>
                </div>
            </div>
        </div>

        <!-- Services Grid -->
        <div id="servicesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Dynamic service configuration cards will be inserted here -->
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="text-center py-12 hidden">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-900">Henüz servis konfigürasyonu yok</h3>
            <p class="mt-1 text-sm text-gray-500">Yeni bir servis ekleyerek başlayın veya varsayılan servisleri oluşturun.</p>
        </div>
    </div>

    <!-- Modal -->
    <div id="modal" class="fixed inset-0 z-50 hidden modal-overlay">
        <div class="flex items-center justify-center min-h-screen px-4">
            <div class="bg-white rounded-xl shadow-2xl max-w-lg w-full p-6 slide-up">
                <div class="flex justify-between items-center mb-6">
                    <h2 id="modalTitle" class="text-xl font-bold text-gray-900">Yeni Servis</h2>
                    <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                
                <form id="serviceForm" class="space-y-4">
                    <input type="hidden" id="serviceId" value="0" />
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Servis Kodu</label>
                            <input type="text" id="serviceCode" required maxlength="50" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <p class="text-xs text-gray-500 mt-1">Benzersiz kod (örn: IT, HR)</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Sıralama</label>
                            <input type="number" id="sortOrder" min="0" max="999" value="0" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Servis Adı</label>
                        <input type="text" id="serviceName" required maxlength="100" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Açıklama</label>
                        <textarea id="description" maxlength="200" rows="2" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"></textarea>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Renk Kodu</label>
                            <div class="flex">
                                <input type="color" id="colorCode" value="#3B82F6" class="w-16 h-10 border border-gray-300 rounded-l-lg">
                                <input type="text" id="colorCodeText" value="#3B82F6" maxlength="7" class="flex-1 px-3 py-2 border border-gray-300 rounded-r-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">İkon Sınıfı</label>
                            <select id="iconClass" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                <option value="default">Varsayılan</option>
                                <option value="computer">Bilgisayar</option>
                                <option value="users">Kullanıcılar</option>
                                <option value="money">Para</option>
                                <option value="megaphone">Megafon</option>
                                <option value="settings">Ayarlar</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex items-center">
                        <input type="checkbox" id="isActive" checked class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                        <label for="isActive" class="ml-2 block text-sm text-gray-900">Aktif</label>
                    </div>
                    
                    <div class="flex gap-3 pt-4">
                        <button type="submit" class="flex-1 bg-purple-600 hover:bg-purple-700 text-white py-2 px-4 rounded-lg font-medium transition-colors duration-200">
                            Kaydet
                        </button>
                        <button type="button" onclick="closeModal()" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-700 py-2 px-4 rounded-lg font-medium transition-colors duration-200">
                            İptal
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script>
    // Global variables
    let servicesData = [];
    let editingId = null;

    // Initialize
    $(document).ready(function() {
        loadServices();
        setupEventListeners();
    });

    function setupEventListeners() {
        $('#serviceForm').on('submit', handleSubmit);
        $('#colorCode').on('change', function() {
            $('#colorCodeText').val($(this).val());
        });
        $('#colorCodeText').on('input', function() {
            const color = $(this).val();
            if (/^#[0-9A-F]{6}$/i.test(color)) {
                $('#colorCode').val(color);
            }
        });
    }

    // Load services data from server
    function loadServices() {
        $.get('@Url.Action("GetAll", "ServiceConfiguration")')
            .done(function(response) {
                if (response.success) {
                    servicesData = response.data;
                    renderServices();
                } else {
                    console.error('Error loading services:', response.message);
                    showEmptyState();
                }
            })
            .fail(function(xhr, status, error) {
                console.error('AJAX Error:', error);
                showEmptyState();
            });
    }

    function renderServices() {
        const grid = $('#servicesGrid');
        const emptyState = $('#emptyState');

        if (servicesData.length === 0) {
            showEmptyState();
            return;
        }

        emptyState.addClass('hidden');

        const cardsHTML = servicesData.map(service => `
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden fade-in">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center">
                            <div class="p-3 rounded-full" style="background-color: ${service.ColorCode}20; color: ${service.ColorCode};">
                                ${getIconSvg(service.IconClass)}
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-semibold text-gray-900">${service.ServiceName}</h3>
                                <p class="text-sm text-gray-500">Kod: ${service.ServiceCode}</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${service.IsActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
                                ${service.IsActive ? 'Aktif' : 'Pasif'}
                            </span>
                        </div>
                    </div>
                    
                    ${service.Description ? `<p class="text-sm text-gray-600 mb-4">${service.Description}</p>` : ''}
                    
                    <div class="flex items-center justify-between">
                        <div class="text-xs text-gray-500">
                            Sıralama: ${service.SortOrder}
                        </div>
                        <div class="flex space-x-2">
                            <button onclick="editService(${service.Id})" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
                                Düzenle
                            </button>
                            <button onclick="deleteService(${service.Id})" class="text-red-600 hover:text-red-900 text-sm font-medium">
                                Sil
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `).join('');

        grid.html(cardsHTML);
    }

    function showEmptyState() {
        $('#servicesGrid').empty();
        $('#emptyState').removeClass('hidden');
    }

    function getIconSvg(iconClass) {
        const icons = {
            'computer': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>',
            'users': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>',
            'money': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
            'megaphone': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path></svg>',
            'settings': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>',
            'default': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>'
        };
        return icons[iconClass] || icons['default'];
    }

    // Modal functions
    function openModal(mode, id = null) {
        const modal = $('#modal');
        const modalTitle = $('#modalTitle');
        const form = $('#serviceForm')[0];
        
        editingId = id;
        
        if (mode === 'add') {
            modalTitle.text('Yeni Servis');
            form.reset();
            $('#serviceId').val('0');
            $('#colorCode').val('#3B82F6');
            $('#colorCodeText').val('#3B82F6');
            $('#isActive').prop('checked', true);
        } else if (mode === 'edit' && id) {
            modalTitle.text('Servis Düzenle');
            
            const service = servicesData.find(s => s.Id === id);
            if (service) {
                $('#serviceId').val(service.Id);
                $('#serviceCode').val(service.ServiceCode);
                $('#serviceName').val(service.ServiceName);
                $('#description').val(service.Description || '');
                $('#colorCode').val(service.ColorCode);
                $('#colorCodeText').val(service.ColorCode);
                $('#iconClass').val(service.IconClass);
                $('#sortOrder').val(service.SortOrder);
                $('#isActive').prop('checked', service.IsActive);
            }
        }
        
        modal.removeClass('hidden');
        $('body').css('overflow', 'hidden');
    }

    function closeModal() {
        $('#modal').addClass('hidden');
        $('body').css('overflow', 'auto');
        editingId = null;
    }

    // Form submission
    function handleSubmit(e) {
        e.preventDefault();
        
        const formData = {
            Id: parseInt($('#serviceId').val()),
            ServiceCode: $('#serviceCode').val().trim(),
            ServiceName: $('#serviceName').val().trim(),
            Description: $('#description').val().trim(),
            ColorCode: $('#colorCodeText').val(),
            IconClass: $('#iconClass').val(),
            SortOrder: parseInt($('#sortOrder').val()) || 0,
            IsActive: $('#isActive').is(':checked')
        };

        const url = editingId ? '@Url.Action("Edit", "ServiceConfiguration")' : '@Url.Action("Create", "ServiceConfiguration")';
        
        $.post(url, formData)
            .done(function(response) {
                if (response.success) {
                    closeModal();
                    loadServices();
                    alert(response.message);
                } else {
                    alert('Hata: ' + response.message);
                    if (response.errors) {
                        console.log('Validation errors:', response.errors);
                    }
                }
            })
            .fail(function() {
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            });
    }

    // Edit and Delete functions
    function editService(id) {
        openModal('edit', id);
    }

    function deleteService(id) {
        if (confirm('Bu servis konfigürasyonunu silmek istediğinizden emin misiniz?')) {
            $.post('@Url.Action("Delete", "ServiceConfiguration")', { id: id })
                .done(function(response) {
                    if (response.success) {
                        loadServices();
                        alert(response.message);
                    } else {
                        alert('Hata: ' + response.message);
                    }
                })
                .fail(function() {
                    alert('Silme işlemi sırasında bir hata oluştu.');
                });
        }
    }

    function createDefaultServices() {
        if (confirm('Varsayılan servis konfigürasyonlarını oluşturmak istediğinizden emin misiniz?')) {
            $.post('@Url.Action("CreateDefaultServices", "ServiceConfiguration")')
                .done(function(response) {
                    if (response.success) {
                        loadServices();
                        alert(response.message);
                    } else {
                        alert('Hata: ' + response.message);
                    }
                })
                .fail(function() {
                    alert('Varsayılan servisler oluşturulurken bir hata oluştu.');
                });
        }
    }

    // Close modal when clicking outside or pressing Escape
    $(document).on('click', '#modal', function(e) {
        if (e.target === this) {
            closeModal();
        }
    });

    $(document).on('keydown', function(e) {
        if (e.key === 'Escape') {
            closeModal();
        }
    });
</script>