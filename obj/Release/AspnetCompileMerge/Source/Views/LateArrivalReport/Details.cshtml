@model MZDNETWORK.Models.LateArrivalReport
@{
    ViewBag.Title = "Tutanak Detay";
}
<head>
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
</head>
<section class="p-6 bg-gray-50 min-h-screen flex justify-center">
    <div class="max-w-3xl w-full bg-white shadow rounded-lg p-6 space-y-4">
        <h2 class="text-2xl font-bold text-center mb-4">TUTANAKTIR</h2>

        <p class="whitespace-pre-line">İş yeri çalışanımız olan <strong>@Model.FullName</strong> isimli personelin <strong>@Model.LateDate.ToString("dd.MM.yyyy")</strong> günü mesaiye saat <strong>@Model.ShiftStartTime.ToString("hh\\:mm")</strong>'de başlaması gerekirken izinsiz ve geçerli bir mazereti olmaksızın saat <strong>@Model.ArrivalTime.ToString("hh\\:mm")</strong>'ta başlamış olup, mesaiye geç gelen personelin konuyla ilişkin savunması alındıktan sonra işbu tutanak isimli yazılı olanlar huzurunda düzenlenip okunarak <strong>@Model.LateDate.ToString("dd.MM.yyyy")</strong> tarihinde imza edilmiştir.</p>

        <h3 class="text-lg font-semibold mt-6">Personelin Savunması</h3>
        <div class="border border-gray-300 rounded-lg p-4 min-h-[150px]">
            @Html.Raw(Model.DefenseText?.Replace("\n", "<br />"))
        </div>

        @if (!string.IsNullOrEmpty(Model.SignaturePath))
        {
            <div class="mt-6">
                <h3 class="text-lg font-semibold">Personel İmzası</h3>
                <img src="@Model.SignaturePath" alt="İmza" class="h-32 border border-gray-300 rounded-lg" />
            </div>
        }

        <div class="mt-6 flex justify-end">
            <a href="@Url.Action("PrintSingle", new { id = Model.Id })" target="_blank" class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg shadow mr-2">Yazdır</a>
            <a href="@Url.Action("Index")" class="bg-gray-600 hover:bg-gray-700 text-white py-2 px-4 rounded-lg shadow">Geri Dön</a>
        </div>
    </div>
</section> 