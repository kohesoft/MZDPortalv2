@model MZDNETWORK.Models.LateArrivalReport
@{
    Layout = null;
    var header = ViewBag.Header as MZDNETWORK.Models.LateArrivalReportHeader;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>İşe Geç Gelme Tutanak</title>
    <style>
        body{font-family:Arial,Helvetica,sans-serif;margin:40px}
        .header-flex{display:flex;align-items:center;justify-content:space-between}
    </style>
</head>
<body>
<div class="header-flex">
    <img src="/imgs/logo_form.png" style="height:80px" />
    <div style="font-size:24px;font-weight:bold;text-align:center">İşe Geç Gelme Tutanak</div>
    <div style="font-size:12px;text-align:right">
        @if(header!=null){
            <div>@header.PrintableNote</div>
            <div>Doküman No : @header.DocumentNo</div>
            <div>İlk Yayın   : @header.FirstPublishDate.ToString("dd.MM.yyyy")</div>
            <div>Revizyon T.: @header.RevisionDate.ToString("dd.MM.yyyy")</div>
            <div>Revizyon No: @header.RevisionNo</div>
        }
    </div>
</div>
<hr />
<p style="white-space:pre-line;font-size:14px">İş yeri çalışanımız olan <strong>@Model.FullName</strong> isimli personelin <strong>@Model.LateDate.ToString("dd.MM.yyyy")</strong> günü mesaiye saat <strong>@Model.ShiftStartTime.ToString("hh\\:mm")</strong>'de başlaması gerekirken izinsiz ve geçerli bir mazereti olmaksızın saat <strong>@Model.ArrivalTime.ToString("hh\\:mm")</strong>'ta başlamış olup, mesaiye geç gelen personelin konuyla ilişkin savunması alındıktan sonra işbu tutanak isimli yazılı olanlar huzurunda düzenlenip okunarak <strong>@Model.LateDate.ToString("dd.MM.yyyy")</strong> tarihinde imza edilmiştir.</p>

<h3 style="margin-top:40px;font-size:16px">Personelin Savunması</h3>
<div style="border:1px solid #000;padding:10px;min-height:100px;font-size:14px">
    @Html.Raw(Model.DefenseText?.Replace("\n","<br />"))
</div>

@if(!string.IsNullOrEmpty(Model.SignaturePath)){
    <div style="margin-top:40px">
        <h3 style="font-size:16px">Personel İmzası</h3>
        <img src="@Model.SignaturePath" style="height:80px;border:1px solid #000" />
    </div>
}
<script>window.onload=function(){window.print();};</script>
</body>
</html> 