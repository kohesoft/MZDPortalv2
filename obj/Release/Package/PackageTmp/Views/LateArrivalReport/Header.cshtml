@model MZDNETWORK.Models.LateArrivalReportHeader
@{
    ViewBag.Title = "Tutanak Üst Bilgi";
}
<head>
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
</head>
<section class="min-h-screen flex justify-center bg-gray-50">
    <div class="w-full max-w-xl">
        @using (Html.BeginForm("Header", "LateArrivalReport", FormMethod.Post, new { @class = "bg-white shadow-2xl rounded-2xl p-8 mt-10 space-y-4" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="text-2xl font-bold mb-4">Üst Bilgi Düzenle</h2>
            @Html.HiddenFor(m=>m.Id)
            <div>
                <label class="block text-sm font-medium mb-1">Doküman No</label>
                @Html.TextBoxFor(m=>m.DocumentNo, new { @class="form-input w-full" })
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium mb-1">İlk Yayın Tarihi</label>
                    @Html.TextBoxFor(m=>m.FirstPublishDate, new { @class="form-input w-full", type="date" })
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1">Revizyon Tarihi</label>
                    @Html.TextBoxFor(m=>m.RevisionDate, new { @class="form-input w-full", type="date" })
                </div>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Revizyon No</label>
                @Html.TextBoxFor(m=>m.RevisionNo, new { @class="form-input w-full" })
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Başlık Notu (logo altı)</label>
                @Html.TextBoxFor(m=>m.PrintableNote, new { @class="form-input w-full" })
            </div>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg shadow">Kaydet</button>
        }
    </div>
</section> 