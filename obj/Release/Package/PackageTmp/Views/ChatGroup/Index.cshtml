@model IEnumerable<MZDNETWORK.Models.ChatGroup>
@{
    ViewBag.Title = "Chat Grupları";
}
<h2 class="text-2xl font-bold mb-6 text-gray-800">Chat Grupları</h2>
<a href="@Url.Action("Create", "ChatGroup")" class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded mb-4 transition">Yeni Grup Oluştur</a>
<div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-sm">
        <thead class="bg-gray-100">
            <tr>
                <th class="py-3 px-4 text-left font-semibold text-gray-700">Ad</th>
                <th class="py-3 px-4 text-left font-semibold text-gray-700">Açıklama</th>
                <th class="py-3 px-4 text-left font-semibold text-gray-700">Oluşturan</th>
                <th class="py-3 px-4 text-left font-semibold text-gray-700">Oluşturulma Tarihi</th>
                <th class="py-3 px-4 text-left font-semibold text-gray-700">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr class="border-t">
                    <td class="py-2 px-4">@group.Name</td>
                    <td class="py-2 px-4">@group.Description</td>
                    <td class="py-2 px-4">@(group.Creator != null ? group.Creator.Username : "Bilinmiyor")</td>
                    <td class="py-2 px-4">@group.CreatedAt.ToString("g")</td>
                    <td class="py-2 px-4 flex gap-2">
                        <a href="@Url.Action("Edit", "ChatGroup", new { id = group.Id })" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded transition text-sm">Düzenle</a>
                        @using (Html.BeginForm("Delete", "ChatGroup", new { id = group.Id }, FormMethod.Post, new { onsubmit = "return confirm('Silmek istediğinize emin misiniz?');" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded transition text-sm">Sil</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
