@model IEnumerable<MZDNETWORK.Models.User>


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Kullanıcı Yönetimi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/tailwind.min.css" />
    <link rel="stylesheet" href="~/Content/kullaniciislemleriindex.css" />

</head>
<body class="min-h-screen bg-gray-100 p-4">
    <div class="max-w-full mx-auto text-xs">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6 bg-gradient-to-r from-blue-600 to-blue-800 flex justify-between items-center">
                <h1 class="text-2xl font-bold text-white">Kullanıcı Yönetimi</h1>
                @Html.ActionLink("Yeni Kullanıcı Ekle", "Create", null, new { @class = "bg-white text-blue-700 px-4 py-2 rounded-md font-medium hover:bg-blue-50 transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-700" })
            </div>
            <div class="p-6">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                        <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                        <span class="block sm:inline">@TempData["ErrorMessage"]</span>
                    </div>
                }
                <div class="mb-4 flex flex-wrap gap-2">
                    <div class="relative flex-grow">
                        <input type="text" id="searchInput" placeholder="Kullanıcı ara..." class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <svg class="absolute right-3 top-2.5 h-5 w-5 text-gray-400 pointer-events-none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 text-xs" id="userTable">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Kullanıcı Adı</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Şifre</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Yetki</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">İsim</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Soyisim</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Departman/Pozisyon</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Dahili</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Cep tel</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">İç mail</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Dış mail</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Sicil</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model)
                            {
                                var userInfo = item.UserInfo.FirstOrDefault();
                                <tr class="user-row cursor-pointer hover:bg-blue-50 transition" data-user-id="@item.Id">
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Username)</td>
                                    <td class="px-4 py-2">••••••••</td>
                                    <td class="px-4 py-2">
                                        @if (item.RoleNames != null && item.RoleNames.Any())
                                        {
                                            foreach (var roleName in item.RoleNames)
                                            {
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full mr-1 mb-1
                                                    @(roleName == "Admin" ? "bg-blue-100 text-blue-800" : roleName == "Manager" ? "bg-purple-100 text-purple-800" : "bg-green-100 text-green-800")">
                                                    @roleName
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                                Rol Atanmamış
                                            </span>
                                        }
                                    </td>
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Surname)</td>
                                    <td class="px-4 py-2">
                                        <div>@Html.DisplayFor(modelItem => item.Department)</div>
                                        <div class="text-xs text-gray-400">@Html.DisplayFor(modelItem => item.Position)</div>
                                    </td>
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Intercom)</td>
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.InternalEmail)</td>
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.ExternalEmail)</td>
                                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Sicil)</td>
                                    <td class="px-4 py-2 text-right">
                                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn-warning text-white bg-yellow-500 px-3 py-1 rounded-md mr-2 inline-block text-xs" })
                                        <a href="#" class="btn-danger text-white bg-red-600 px-3 py-1 rounded-md inline-block text-xs" data-user-id="@item.Id">Sil</a>
                                    </td>
                                </tr>
                                <tr class="user-info-row" id="user-info-@item.Id" style="display: none;">
                                    <td colspan="12">
                                        <div class="user-info p-4 m-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 bg-gray-50 rounded-lg">
                                            <p><strong class="text-gray-700">E-posta:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.Email)</span></p>
                                            <p><strong class="text-gray-700">Telefon Numarası:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.RealPhoneNumber)</span></p>
                                            <p><strong class="text-gray-700">Adres:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.Adres)</span></p>
                                            <p><strong class="text-gray-700">Adres 2:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.Adres2)</span></p>
                                            <p><strong class="text-gray-700">Şehir:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.Sehir)</span></p>
                                            <p><strong class="text-gray-700">Ülke:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.Ulke)</span></p>
                                            <p><strong class="text-gray-700">Posta Kodu:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.Postakodu)</span></p>
                                            <p><strong class="text-gray-700">Kan Grubu:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.KanGrubu)</span></p>
                                            <p><strong class="text-gray-700">Doğum Tarihi:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.DogumTarihi)</span></p>
                                            <p><strong class="text-gray-700">Cinsiyet:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.Cinsiyet)</span></p>
                                            <p><strong class="text-gray-700">Medeni Durum:</strong> <span class="text-gray-600">@Html.DisplayFor(modelItem => userInfo.MedeniDurum)</span></p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Silme Onay Modali -->
    <div id="deleteModal" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6">
            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <div class="text-center mb-6">
                    <svg class="w-16 h-16 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    <h3 class="text-xl font-bold text-red-600 mt-4">Bu kullanıcıyı silmek istediğinizden emin misiniz?</h3>
                    <p class="text-gray-500 mt-2">Bu işlem geri alınamaz.</p>
                </div>
                <div class="bg-gray-50 rounded-lg p-4 mb-6">
                    <dl>
                        <div class="grid grid-cols-3 py-3 px-2 border-b border-gray-200">
                            <dt class="text-sm font-medium text-gray-500">Kullanıcı Adı:</dt>
                            <dd class="text-sm text-gray-900 col-span-2" id="modal-username"></dd>
                        </div>
                        <div class="grid grid-cols-3 py-3 px-2 border-b border-gray-200">
                            <dt class="text-sm font-medium text-gray-500">Ad:</dt>
                            <dd class="text-sm text-gray-900 col-span-2" id="modal-name"></dd>
                        </div>
                        <div class="grid grid-cols-3 py-3 px-2 border-b border-gray-200">
                            <dt class="text-sm font-medium text-gray-500">Soyad:</dt>
                            <dd class="text-sm text-gray-900 col-span-2" id="modal-surname"></dd>
                        </div>
                        <div class="grid grid-cols-3 py-3 px-2">
                            <dt class="text-sm font-medium text-gray-500">Sicil No:</dt>
                            <dd class="text-sm text-gray-900 col-span-2" id="modal-sicil"></dd>
                        </div>
                    </dl>
                </div>
                <div class="flex justify-center gap-4">
                    <button type="submit" id="confirmDelete" class="bg-red-600 text-white py-2 px-6 rounded-md font-medium shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                        Kullanıcıyı Sil
                    </button>
                    <button type="button" id="cancelDelete" class="bg-gray-600 text-white py-2 px-6 rounded-md font-medium shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                        İptal
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Satır detay açma
        document.querySelectorAll('.user-row').forEach(row => {
            row.addEventListener('click', function (e) {
                // Eğer tıklanan buton ise detay açma tetiklenmesin
                if (e.target.classList.contains('btn-danger') || e.target.classList.contains('btn-warning')) return;
                const userId = this.getAttribute('data-user-id');
                const infoRow = document.getElementById(`user-info-${userId}`);
                document.querySelectorAll('.user-info-row').forEach(r => {
                    if (r.id !== `user-info-${userId}`) r.style.display = 'none';
                });
                if (infoRow.style.display === 'none') {
                    infoRow.style.display = 'table-row';
                } else {
                    infoRow.style.display = 'none';
                }
            });
        });

        // Arama fonksiyonu
        document.getElementById('searchInput').addEventListener('keyup', function () {
            const searchTerm = this.value.toLowerCase();
            document.querySelectorAll('.user-row').forEach(row => {
                const username = row.querySelector('td:nth-child(1)').textContent.toLowerCase();
                const name = row.querySelector('td:nth-child(4)').textContent.toLowerCase();
                const surname = row.querySelector('td:nth-child(5)').textContent.toLowerCase();
                if (username.includes(searchTerm) || name.includes(searchTerm) || surname.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                    // Açık detay satırı varsa kapat
                    const userId = row.getAttribute('data-user-id');
                    const infoRow = document.getElementById(`user-info-${userId}`);
                    infoRow.style.display = 'none';
                }
            });
        });

        // Sil butonu ve modal
        let deleteUserId = null;
        document.querySelectorAll('.btn-danger').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                const row = this.closest('.user-row');
                deleteUserId = row.getAttribute('data-user-id');
                document.getElementById('modal-username').textContent = row.querySelector('td:nth-child(1)').textContent;
                document.getElementById('modal-name').textContent = row.querySelector('td:nth-child(4)').textContent;
                document.getElementById('modal-surname').textContent = row.querySelector('td:nth-child(5)').textContent;
                document.getElementById('modal-sicil').textContent = row.querySelector('td:nth-child(11)').textContent;
                document.getElementById('deleteModal').classList.remove('hidden');
            });
        });
        document.getElementById('cancelDelete').addEventListener('click', function () {
            document.getElementById('deleteModal').classList.add('hidden');
        });
        document.getElementById('deleteForm').addEventListener('submit', function (e) {
            e.preventDefault();
            if (deleteUserId) {
                const formData = new FormData(this);
                // AntiForgeryToken'ı header olarak ekle
                const token = this.querySelector('input[name="__RequestVerificationToken"]').value;
                
                // Submit butonunu devre dışı bırak
                const submitBtn = document.getElementById('confirmDelete');
                const originalText = submitBtn.textContent;
                submitBtn.disabled = true;
                submitBtn.textContent = 'Siliniyor...';
                
                fetch(`/Kullanici_Islemleri/Delete/${deleteUserId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        // Kullanıcı satırını ve detay satırını DOM'dan tamamen kaldır
                        const userRow = document.querySelector(`.user-row[data-user-id="${deleteUserId}"]`);
                        const infoRow = document.getElementById(`user-info-${deleteUserId}`);
                        
                        if (userRow) {
                            userRow.remove();
                        }
                        if (infoRow) {
                            infoRow.remove();
                        }
                        
                        const successMessage = document.createElement('div');
                        successMessage.className = 'mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative';
                        successMessage.innerHTML = '<span class="block sm:inline">Kullanıcı başarıyla silindi.</span>';
                        document.querySelector('.max-w-full').insertBefore(successMessage, document.querySelector('.max-w-full').firstChild);
                        setTimeout(() => successMessage.remove(), 3000);
                        
                    } else {
                        const errorMessage = document.createElement('div');
                        errorMessage.className = 'mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative';
                        errorMessage.innerHTML = '<span class="block sm:inline">Kullanıcı silinirken bir hata oluştu.</span>';
                        document.querySelector('.max-w-full').insertBefore(errorMessage, document.querySelector('.max-w-full').firstChild);
                        setTimeout(() => errorMessage.remove(), 3000);
                        
                        // Submit butonunu yeniden aktif et
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    }
                })
                .catch(error => {
                    console.error('Silme işlemi sırasında hata:', error);
                    const errorMessage = document.createElement('div');
                    errorMessage.className = 'mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative';
                    errorMessage.innerHTML = '<span class="block sm:inline">Kullanıcı silinirken bir hata oluştu.</span>';
                    document.querySelector('.max-w-full').insertBefore(errorMessage, document.querySelector('.max-w-full').firstChild);
                    setTimeout(() => errorMessage.remove(), 3000);
                    
                    // Submit butonunu yeniden aktif et
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                });
            }
            document.getElementById('deleteModal').classList.add('hidden');
        });
    </script>
</body>
</html>
