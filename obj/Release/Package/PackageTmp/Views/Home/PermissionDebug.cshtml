@{
    ViewBag.Title = "Permission Debug";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4>Permission Debug - Food.Merkez</h4>
                </div>
                <div class="card-body">
                    <h5>Kullanıcı Bilgileri</h5>
                    <ul class="list-group mb-3">
                        <li class="list-group-item">
                            <strong>Authenticated:</strong> 
                            <span class="badge badge-@(User.Identity.IsAuthenticated ? "success" : "danger")">
                                @User.Identity.IsAuthenticated
                            </span>
                        </li>
                        <li class="list-group-item">
                            <strong>Username:</strong> @User.Identity.Name
                        </li>
                        <li class="list-group-item">
                            <strong>Session UserId:</strong> @Session["UserId"]
                        </li>
                    </ul>

                    <h5>Permission Testleri</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Permission</th>
                                    <th>Action</th>
                                    <th>Sonuç</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Food.Merkez</td>
                                    <td>View</td>
                                    <td>
                                        @if (MZDNETWORK.Attributes.DynamicAuthorizeAttribute.CurrentUserHasPermission("Food.Merkez", "View"))
                                        {
                                            <span class="badge badge-success">✓ İzin Var</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">✗ İzin Yok</span>
                                        }
                                    </td>
                                    <td>Layout'ta link kontrolü için kullanılıyor</td>
                                </tr>
                                <tr>
                                    <td>Food.Merkez</td>
                                    <td>-</td>
                                    <td>
                                        @if (MZDNETWORK.Attributes.DynamicAuthorizeAttribute.CurrentUserHasAnyPermission("Food.Merkez"))
                                        {
                                            <span class="badge badge-success">✓ İzin Var</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">✗ İzin Yok</span>
                                        }
                                    </td>
                                    <td>Layout'ta "any permission" kontrolü</td>
                                </tr>
                                <tr>
                                    <td>Food.Yerleske</td>
                                    <td>View</td>
                                    <td>
                                        @if (MZDNETWORK.Attributes.DynamicAuthorizeAttribute.CurrentUserHasPermission("Food.Yerleske", "View"))
                                        {
                                            <span class="badge badge-success">✓ İzin Var</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">✗ İzin Yok</span>
                                        }
                                    </td>
                                    <td>Yerleşke yemek listesi için</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <h5>Debug Bilgileri</h5>
                    <div class="alert alert-info">
                        <p><strong>Not:</strong> Bu sayfa permission debug için oluşturulmuştur.</p>
                        <p>Eğer yemek listesi linkini görebiliyorsanız ama sayfaya erişemiyorsanız, yukarıdaki tablo size nedenini gösterecektir.</p>
                    </div>

                    <h5>Test Linkleri</h5>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("MerkezYemekListesi", "Home")" class="btn btn-primary">
                            Merkez Yemek Listesi
                        </a>
                        <a href="@Url.Action("YerleskeYemekListesi", "Home")" class="btn btn-secondary">
                            Yerleşke Yemek Listesi
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-info">
                            Ana Sayfa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
