@model MZDNETWORK.Models.Survey

<!-- Tailwind CSS -->
<link rel="stylesheet" href="~/Content/tailwind.min.css" />

<div class="container mx-auto my-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-8 text-center pb-4 border-b border-gray-200">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">@Model.Title</h2>
        <p class="text-gray-500 mt-2">@Model.Description</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            @Html.ValidationSummary()
        </div>
    }

    <form id="surveyForm" method="post" action="@Url.Action("SubmitSurvey", "Answer")" class="space-y-6">
        <input type="hidden" name="surveyId" value="@Model.ID" />

        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <div class="mb-6 p-5 border border-gray-200 rounded-lg bg-white shadow-sm hover:shadow-md transition">
                <div class="font-medium text-lg text-gray-800 mb-3">@Model.Questions[i].QuestionText</div>

                <div class="mt-2 space-y-2">
                    @if (Model.Questions[i].Type == QuestionType.Text)
                    {
                        <input type="text" name="answers[@i].AnswerText" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" placeholder="Yanıtınızı buraya yazın..." />
                    }
                    else if (Model.Questions[i].Type == QuestionType.Radio)
                    {
                        foreach (var option in Model.Questions[i].AnswerOptions)
                        {
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="radio" name="answers[@i].AnswerText" value="@option.OptionText" class="form-radio text-green-600" />
                                <span class="text-gray-700">@option.OptionText</span>
                            </label>
                        }
                    }
                    else if (Model.Questions[i].Type == QuestionType.Checkbox)
                    {
                        foreach (var option in Model.Questions[i].AnswerOptions)
                        {
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="checkbox" name="answers[@i].AnswerText" value="@option.OptionText" class="form-checkbox text-green-600" />
                                <span class="text-gray-700">@option.OptionText</span>
                            </label>
                        }
                    }
                </div>

                <input type="hidden" name="answers[@i].QuestionID" value="@Model.Questions[i].ID" />
            </div>
        }

        <div class="flex justify-center mt-8">
            <button type="button" class="px-8 py-3 bg-green-700 hover:bg-green-800 text-white rounded-lg font-semibold shadow transition" onclick="showModal()">Gönder</button>
        </div>
    </form>

    <!-- Modal HTML -->
    <div id="confirmationModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" tabindex="-1" role="dialog" style="display:none;">
        <div class="max-w-xs mx-auto">
            <div class="bg-white rounded-lg p-8 shadow-lg text-center">
                <div class="flex flex-col items-center justify-center">
                    <svg class="animate-spin h-8 w-8 text-green-600 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"></path>
                    </svg>
                    <p class="text-gray-700">Yanıtlarınız gönderiliyor...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showModal() {
        var modal = document.getElementById('confirmationModal');
        modal.style.display = 'flex';
        setTimeout(function () {
            document.getElementById('surveyForm').submit();
        }, 4000);
    }
</script>
