@model MZDNETWORK.Models.LeaveRequest

@{
    ViewBag.Title = "İzin Talebi Detayları";
}

<div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-xl shadow-xl overflow-hidden">
                <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-8 py-6">
                    <h3 class="text-2xl font-bold text-white">İzin Talebi Detayları</h3>
                    <p class="mt-2 text-blue-100">İzin talebine ait tüm bilgiler</p>
                </div>
                <div class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Talep Eden</h5>
                            <p class="text-base font-medium text-gray-900">@Model.RequestingUser.Username</p>
                        </div>
                        <div class="text-right">
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Talep Tarihi</h5>
                            <p class="text-base font-medium text-gray-900">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">İzin Türü</h5>
                            <p class="text-base font-medium text-gray-900">@MZDNETWORK.Helpers.EnumDisplayHelper.ToDisplayName(Model.LeaveType)</p>
                        </div>
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Başlangıç Tarihi</h5>
                            <p class="text-base font-medium text-gray-900">@Model.StartDate.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Bitiş Tarihi</h5>
                            <p class="text-base font-medium text-gray-900">@Model.EndDate.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Süre</h5>
                            <p class="text-base font-medium text-gray-900">@Model.DurationDisplay</p>
                        </div>
                    </div>

                    <div class="mb-8">
                        <h5 class="text-sm font-medium text-gray-500 mb-2">İzin Nedeni</h5>
                        <p class="text-base text-gray-900 bg-gray-50 rounded-lg p-4">@Model.Reason</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-8">
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Açıklama</h5>
                            <p class="text-base text-gray-900 bg-gray-50 rounded-lg p-4">@Model.Description</p>
                        </div>
                    }

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Departman</h5>
                            <p class="text-base font-medium text-gray-900">@Model.Department</p>
                        </div>
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Yerine Bakacak</h5>
                            <p class="text-base font-medium text-gray-900">@Model.SubstituteName</p>
                        </div>
                    </div>

                    <div class="mb-8">
                        <h5 class="text-sm font-medium text-gray-500 mb-2">Devredilecek Görevler</h5>
                        <p class="text-base text-gray-900 bg-gray-50 rounded-lg p-4">@Model.Tasks</p>
                    </div>

                    <div class="mb-8">
                        <h5 class="text-sm font-medium text-gray-500 mb-2">İletişim Bilgisi</h5>
                        <p class="text-base text-gray-900 bg-gray-50 rounded-lg p-4">@Model.ContactInfo</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                        @{
                            var supervisorStatus = "";
                            var managerStatus = "";
                            switch(Model.Status)
                            {
                                case MZDNETWORK.Models.LeaveStatus.PendingSupervisor:
                                    supervisorStatus = "Beklemede";
                                    managerStatus = "Beklemede";
                                    break;
                                case MZDNETWORK.Models.LeaveStatus.PendingManager:
                                    supervisorStatus = "Onaylandı";
                                    managerStatus = "Beklemede";
                                    break;
                                case MZDNETWORK.Models.LeaveStatus.Approved:
                                    supervisorStatus = "Onaylandı";
                                    managerStatus = "Onaylandı";
                                    break;
                                case MZDNETWORK.Models.LeaveStatus.ConditionallyApproved:
                                    supervisorStatus = "Onaylandı";
                                    managerStatus = "Şartlı Onaylandı";
                                    break;
                                case MZDNETWORK.Models.LeaveStatus.Rejected:
                                    supervisorStatus = "Reddedildi";
                                    managerStatus = "Reddedildi";
                                    break;
                            }
                        }

                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Şef Onayı</h5>
                            <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@supervisorStatus</span>
                        </div>
                        <div>
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Müdür Onayı</h5>
                            <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@managerStatus</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ApprovalReason))
                    {
                        <div class="mb-8">
                            <h5 class="text-sm font-medium text-gray-500 mb-2">Onay/Red Nedeni</h5>
                            <p class="text-base text-gray-900 bg-gray-50 rounded-lg p-4">@Model.ApprovalReason</p>
                        </div>
                    }

                    <div class="flex justify-end">
                        @if (MZDNETWORK.Attributes.DynamicAuthorizeAttribute.CurrentUserHasPermission("LeaveRequest", "Manage"))
                        {
                            <a href="@Url.Action("AdminDashboard")" class="inline-flex items-center px-6 py-3 border-2 border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
                                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l5.293 5.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                                </svg>
                                Yönetim Paneline Dön
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index")" class="inline-flex items-center px-6 py-3 border-2 border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
                                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l5.293 5.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                                </svg>
                                Listeye Dön
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClasses(MZDNETWORK.Models.LeaveStatus status)
    {
        var baseClasses = "inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium ";
        
        switch (status)
        {
            case MZDNETWORK.Models.LeaveStatus.Approved:
                return baseClasses + "bg-green-100 text-green-800";
            case MZDNETWORK.Models.LeaveStatus.Rejected:
                return baseClasses + "bg-red-100 text-red-800";
            case MZDNETWORK.Models.LeaveStatus.ConditionallyApproved:
                return baseClasses + "bg-yellow-100 text-yellow-800";
            default:
                return baseClasses + "bg-blue-100 text-blue-800";
        }
    }
} 