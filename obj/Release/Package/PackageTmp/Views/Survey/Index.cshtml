@model List<MZDNETWORK.Models.Survey>

<h2>Anketler</h2>
@if (User.IsInRole("Yonetici") || User.IsInRole("Sys") || User.IsInRole("IK"))
{
    <a href="@Url.Action("Create", "Survey")" class="btn btn-success mb-3">Yeni Anket Oluştur</a>
}
<table class="table">
    <thead>
        <tr>
            <th>Anket Adı</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var survey in Model)
        {
            <tr>
                <td>@survey.Title</td>
                <td>@survey.Description</td>
                <td>@survey.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="javascript:void(0);" onclick="checkSurvey(@survey.ID)" class="btn btn-primary">Cevapla</a>

                    @if (User.IsInRole("Yonetici") || User.IsInRole("Sys") || User.IsInRole("IK"))
                    {
                        <a href="@Url.Action("SurveyResults", "Survey", new { surveyId = survey.ID })" class="btn btn-info">Sonuçları Gör</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="surveyModal" tabindex="-1" role="dialog" aria-labelledby="surveyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="surveyModalLabel">Uyarı</h5>
            </div>
            <div class="modal-body">
                Bu anketi daha önce yanıtladınız.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function checkSurvey(surveyId) {
            $.getJSON('@Url.Action("HasAnsweredSurvey", "Answer")', { surveyId: surveyId }, function (hasAnswered) {
                if (hasAnswered) {
                    $('#surveyModal').modal('show');
                    setTimeout(function() {
                        location.reload();
                    }, 3000);
                } else {
                    window.location.href = '@Url.Action("TakeSurvey", "Answer")' + '?surveyId=' + surveyId;
                }
            });
        }
    </script>
}


<style>
    body {
        all: unset;
        background-color: white;
    }
    modal {
        z-index: 1;
    }
</style>