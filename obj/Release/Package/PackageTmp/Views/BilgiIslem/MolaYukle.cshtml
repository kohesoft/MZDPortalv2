@{
    ViewBag.Title = "Mola Yükle";
    var photos = Model as List<string>;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <link rel="stylesheet" href="~/Content/all.min.css" />
    <link rel="stylesheet" href="~/Content/boxicons.min.css" />
    <link rel="stylesheet" href="~/Content/molayukle.css" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />
</head>
<body>
    <section class="container">
        <div class="card fade-in">
            <div class="card-header">
                <h3 class="card-title">Mola Yükle</h3>
            </div>
            <div class="card-body">
                <div class="upload-container">
                    <h4 class="upload-title">Yeni bir mola fotoğrafı yükleyin</h4>
                    <form action="@Url.Action("UploadMolaPhoto", "BilgiIslem")" method="post" enctype="multipart/form-data" class="mb-4">
                        <div class="input-group">
                            <input type="file" name="photo" class="form-control" accept="image/*" />
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-cloud-upload" style="font-size: 20px; margin-right: 8px;"></i>
                                Fotoğraf Yükle
                            </button>
                        </div>
                    </form>
                </div>

                <div class="photos-section">
                    <h3 class="section-title">Yüklenen Fotoğraflar</h3>
                    @if (photos != null && photos.Count > 0)
                    {
                        <div class="table-responsive" style="max-height: 550px; overflow-y: auto;">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Fotoğraf Adı</th>
                                        <th style="width: 120px;">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var photo in photos)
                                    {
                                        <tr>
                                            <td>
                                                <div class="file-name">@photo</div>
                                            </td>
                                            <td>
                                                <form action="@Url.Action("DeleteMola", "BilgiIslem")" method="post" style="display:inline;">
                                                    <input type="hidden" name="fileName" value="@photo" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bx bx-trash" style="font-size: 18px; margin-right: 4px;"></i>
                                                        Sil
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">📁</div>
                            <p>Henüz yüklenmiş fotoğraf bulunmamaktadır.</p>
                        </div>
                    }
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success fade-in">
                        <i class="bx bx-check-circle" style="font-size: 18px; margin-right: 8px;"></i>
                        @TempData["Message"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger fade-in">
                        <i class="bx bx-error-circle" style="font-size: 18px; margin-right: 8px;"></i>
                        @TempData["Error"]
                    </div>
                }
            </div>
        </div>
    </section>
</body>
</html>
